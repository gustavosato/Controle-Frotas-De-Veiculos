@model ControleVeiculos.MVC.Models.Reservas.ReservaModel

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@Html.HiddenFor(model => model.ReservaID)

<ul class="nav nav-tabs" id="myTab" role="tablist">
    <li class="nav-item">
        <a class="nav-link active" id="maintenance-tab" data-toggle="tab" href="#maintenance" role="tab" aria-controls="maintenance" aria-selected="true">Nova Reserva</a>
    </li>
</ul>

<div class="tab-content" id="myTabContent">
    <div class="tab-pane fade show active" id="maintenance" role="tabpanel" aria-labelledby="maintenance-tab">
        <div class="card">
            <div class="card-body">
                <div class="form-group row">
                    <div class="col-md-2 mb-auto">
                        @Html.LabelFor(model => model.Finalidade, new { @class = "col-sm-0 col-form-label text-left" })
                        @Html.TextBoxFor(model => model.Finalidade, new { @class = "form-control", placeholder = "Digite a finalidade" })
                        @Html.ValidationMessageFor(model => model.Finalidade, "", new { @class = "form-text text-danger" })
                    </div>

                    <div class="col-md-2 mb-auto">
                        @Html.LabelFor(model => model.FuncionarioID, new { @class = "col-sm-0 col-form-label text-left" })
                        @Html.DropDownList("FuncionarioID", Model.LoadFuncionario, "Selecione...", new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.FuncionarioID, "", new { @class = "form-text text-danger" })
                    </div>
                    <div class="col-md-2 mb-auto">
                        @Html.LabelFor(model => model.Destino, new { @class = "col-sm-0 col-form-label text-left" })
                        @Html.TextBoxFor(model => model.Destino, new { @class = "form-control", placeholder = "Digite o destino", @autofocus = "autofocus" })
                        @Html.ValidationMessageFor(model => model.Destino, "", new { @class = "form-text text-danger" })
                    </div>

                    <div class="col-md-2 mb-auto">
                        @Html.LabelFor(model => model.NumeroCnh, new { @class = "col-sm-0 col-form-label text-left" })
                        @Html.TextBoxFor(model => model.NumeroCnh, new { @class = "form-control", placeholder = "Digite a CNH", @autofocus = "autofocus" })
                        @Html.ValidationMessageFor(model => model.NumeroCnh, "", new { @class = "form-text text-danger" })
                    </div>

                    <div class="col-md-2 mb-auto">
                        @Html.LabelFor(model => model.VeiculoID, new { @class = "col-sm-0 col-form-label text-left" })
                        @Html.DropDownList("VeiculoID", Model.LoadVeiculo, "Selecione...", new { @class = "form-control", autocomplete = "off" })<span class="input-group-addon"></span>
                        @Html.ValidationMessageFor(model => model.VeiculoID, "", new { @class = "form-text text-danger" })
                    </div>

                    <div class="col-md-3 mb-auto" id="calender-container">
                        @Html.LabelFor(model => model.DataReserva, new { @class = "col-sm-0 col-form-label text-left" })
                        <div class="input-group date">
                            @Html.TextBoxFor(model => model.DataReserva, new { @class = "form-control", autocomplete = "off", placeholder = "Selecione..." })<span class="input-group-addon"></span>
                            @Html.ValidationMessageFor(model => model.DataReserva, "", new { @class = "form-text text-danger" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




