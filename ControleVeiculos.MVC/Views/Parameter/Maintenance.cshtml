@model ControleVeiculos.MVC.Models.Parameters.ParameterModel

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@Html.HiddenFor(model => model.ParameterID)
@Html.HiddenFor(model => model.CreatedByID)

<div class="form-group row">

    <div class="col-md-2 mb-auto">
        @Html.LabelFor(model => model.ParameterID, new { @class = "col-sm-0 col-form-label text-left" })
        @Html.TextBoxFor(model => model.ParameterID, new { @class = "form-control text-left", @readonly = "readonly" })
        @Html.ValidationMessageFor(model => model.ParameterID, "", new { @class = "form-text text-danger" })
    </div>

    <div class="col-md-4 mb-auto">
        <strong>@Html.LabelFor(model => model.ParameterName, new { @class = "col-sm-0 col-form-label text-left" })</strong>
        <strong><span style="color:black;">*</span></strong>
        @Html.TextBoxFor(model => model.ParameterName, new { @class = "form-control text-left", @autofocus = "autofocus" })
        @Html.ValidationMessageFor(model => model.ParameterName, "", new { @class = "form-text text-danger" })
    </div>

    <div class="col-md-4 mb-auto">
        <strong>@Html.LabelFor(model => model.SystemFeatureID, new { @class = "col-sm-0 col-form-label text-left" })</strong>
        <strong><span style="color:black;">*</span></strong>
        @Html.DropDownList("SystemFeatureID", Model.LoadSystemFeatures, "Selecione...", new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.SystemFeatureID, "", new { @class = "form-text text-danger" })
    </div>

    <div class="col-md-2 mb-auto">
        @Html.LabelFor(model => model.CreationDate, new { @class = "col-sm-0 col-form-label text-left" })
        @Html.TextBoxFor(model => model.CreationDate, new { @class = "form-control text-left", @readonly = "readonly" })
        @Html.ValidationMessageFor(model => model.CreationDate, "", new { @class = "form-text text-danger" })
    </div>

</div>

