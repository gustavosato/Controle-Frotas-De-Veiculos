@model ControleVeiculos.MVC.Models.Seguros.SeguroModel

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@Html.HiddenFor(model => model.SeguroID)

<ul class="nav nav-tabs" id="myTab" role="tablist">
    <li class="nav-item">
        <a class="nav-link active" id="maintenance-tab" data-toggle="tab" href="#maintenance" role="tab" aria-controls="maintenance" aria-selected="true">Novo Funcionário</a>
    </li>
</ul>

<div class="tab-content" id="myTabContent">
    <div class="tab-pane fade show active" id="maintenance" role="tabpanel" aria-labelledby="maintenance-tab">
        <div class="card">
            <div class="card-body">
                <div class="form-group row">
                    <div class="col-md-6 mb-auto">
                        @Html.LabelFor(model => model.VeiculoID, new { @class = "col-sm-0 col-form-label text-left" })
                        @Html.DropDownList("VeiculoID", Model.LoadVeiculo, "Selecione...", new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.VeiculoID, "", new { @class = "form-text text-danger" })
                    </div>
                    <div class="col-md-6 mb-auto">
                        @Html.LabelFor(model => model.Apolice, new { @class = "col-sm-0 col-form-label text-left" })
                        @Html.TextBoxFor(model => model.Apolice, new { @class = "form-control", placeholder = "Digite o número", @autofocus = "autofocus" })
                        @Html.ValidationMessageFor(model => model.Apolice, "", new { @class = "form-text text-danger" })
                    </div>
                    <div class="col-md-6 mb-auto">
                        @Html.LabelFor(model => model.Seguradora, new { @class = "col-sm-0 col-form-label text-left" })
                        @Html.TextBoxFor(model => model.Seguradora, new { @class = "form-control", placeholder = "Nome da Seguradora", @autofocus = "autofocus" })
                        @Html.ValidationMessageFor(model => model.Seguradora, "", new { @class = "form-text text-danger" })
                    </div>

                    <div class="col-md-2 mb-auto">
                        @Html.LabelFor(model => model.Franquia, new { @class = "col-sm-0 col-form-label text-left" })
                        @Html.TextBoxFor(model => model.Franquia, new { @class = "form-control", placeholder = "Digite a franquia", @autofocus = "autofocus" })
                        @Html.ValidationMessageFor(model => model.Franquia, "", new { @class = "form-text text-danger" })
                    </div>
                    <div class="col-md-2 mb-auto">
                        @Html.LabelFor(model => model.TipoSeguro, new { @class = "col-sm-0 col-form-label text-left" })
                        @Html.TextBoxFor(model => model.TipoSeguro, new { @class = "form-control", placeholder = "Tipo de seguro", @autofocus = "autofocus" })
                        @Html.ValidationMessageFor(model => model.TipoSeguro, "", new { @class = "form-text text-danger" })
                    </div>

                    <div class="col-md-2 mb-auto" id="calender-container">
                        @Html.LabelFor(model => model.DataContratacao, new { @class = "col-sm-0 col-form-label text-left" })
                        <div class="input-group date">
                            @Html.TextBoxFor(model => model.DataContratacao, new { @class = "form-control", placeholder = "Selecione...", @autofocus = "autofocus" })
                            @Html.ValidationMessageFor(model => model.DataContratacao, "", new { @class = "form-text text-danger" })
                        </div>
                    </div>

                    <div class="col-md-2 mb-auto">
                        @Html.LabelFor(model => model.Vigencia, new { @class = "col-sm-0 col-form-label text-left" })
                        @Html.TextBoxFor(model => model.Vigencia, new { @class = "form-control", placeholder = "Digite o periodo", @autofocus = "autofocus" })
                        @Html.ValidationMessageFor(model => model.Vigencia, "", new { @class = "form-text text-danger" })
                    </div>
                    <div class="col-md-2 mb-auto" id="calender-container">
                        @Html.LabelFor(model => model.FimContratacao, new { @class = "col-sm-0 col-form-label text-left" })
                        <div class="input-group date">
                            @Html.TextBoxFor(model => model.FimContratacao, new { @class = "form-control", placeholder = "Selecione...", @autofocus = "autofocus" })
                            @Html.ValidationMessageFor(model => model.FimContratacao, "", new { @class = "form-text text-danger" })
                        </div>
                    </div>
                    <div class="col-md-2 mb-auto">
                        @Html.LabelFor(model => model.Renovacao, new { @class = "col-sm-0 col-form-label text-left" })
                        @Html.TextBoxFor(model => model.Renovacao, new { @class = "form-control", placeholder = "Selecione...", @autofocus = "autofocus" })
                        @Html.ValidationMessageFor(model => model.Renovacao, "", new { @class = "form-text text-danger" })
                    </div>
                    <div class="col-md-2 mb-auto">
                        @Html.LabelFor(model => model.TelefoneSeguradora, new { @class = "col-sm-0 col-form-label text-left" })
                        @Html.TextBoxFor(model => model.TelefoneSeguradora, new { @class = "form-control", placeholder = "Selecione...", @autofocus = "autofocus" })
                        @Html.ValidationMessageFor(model => model.TelefoneSeguradora, "", new { @class = "form-text text-danger" })
                    </div>
                    <div class="col-md-2 mb-auto">
                        @Html.LabelFor(model => model.PeriodoCarencia, new { @class = "col-sm-0 col-form-label text-left" })
                        @Html.TextBoxFor(model => model.PeriodoCarencia, new { @class = "form-control", placeholder = "Selecione...", @autofocus = "autofocus" })
                        @Html.ValidationMessageFor(model => model.PeriodoCarencia, "", new { @class = "form-text text-danger" })
                    </div>
                    <div class="col-md-2 mb-auto">
                        @Html.LabelFor(model => model.Indenizacao, new { @class = "col-sm-0 col-form-label text-left" })
                        @Html.TextBoxFor(model => model.Indenizacao, new { @class = "form-control", placeholder = "Selecione...", @autofocus = "autofocus" })
                        @Html.ValidationMessageFor(model => model.Indenizacao, "", new { @class = "form-text text-danger" })
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




