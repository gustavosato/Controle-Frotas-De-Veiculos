@model ControleVeiculos.MVC.Models.Users.UserModel
@{
    ViewBag.Title = " - Users";
    Layout = "~/Views/Shared/_ContentPage.cshtml";
}

@using (Html.BeginForm())
{
    <div class="container-fluid">
        <br />
        <div class="content-header clearfix">

            <div class="pull-left">


                <button type="button" onclick="New()" id="btnNew" class="btn btn-dark btn-sm" data-toggle="modal" data-target='#AddModal' title="Novo Registro">
                    <i class="fa fa-plus-circle"></i> Novo
                </button>
                <button class="btn btn-primary btn-sm" type="button" id="btnFilter" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample" title="Filtrar">
                    <i class="fa fa-filter"></i> Filtrar
                </button>
                <button type="button" id="btnExportExcel" class="btn btn-info btn-sm" title="Exportar para Excel">
                    <i class="fa fa-file-excel-o"></i> Exportar para Excel
                </button>
            </div>
        </div>
        <br />

        <div class="card">

            <div class="collapse" id="collapseExample">
                <div class="card card-body">
                    <div class="row">
                        <div class="col-md-12 mx-auto">
                            <div class="form-group row">
                                @Html.LabelFor(model => model.SearchUserName, new { @class = "col-sm-2 col-form-label text-right" })
                                <div class="col-sm-3">
                                    @Html.TextBoxFor(model => model.SearchUserName, null, new { @class = "form-control" })
                                </div>
                                @Html.LabelFor(model => model.SearchDepartmentID, new { @class = "col-sm-2 col-form-label text-right" })
                                <div class="col-sm-3">
                                    @Html.DropDownList("SearchDepartmentID", Model.LoadDepartments, "Selecione...", new { @class = "form-control" })
                                </div>

                            </div>
                            <div class="form-group row">
                                @Html.LabelFor(model => model.SearchEmail, new { @class = "col-sm-2 col-form-label text-right" })
                                <div class="col-sm-3">
                                    @Html.TextBoxFor(model => model.SearchEmail, null, new { @class = "form-control" })
                                </div>
                                @Html.LabelFor(model => model.SearchFunctionID, new { @class = "col-sm-2 col-form-label text-right" })
                                <div class="col-sm-3">
                                    @Html.DropDownList("SearchFunctionID", Model.LoadFunctions, "Selecione...", new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group row">

                            </div>
                            <div class="form-group row">
                            </div>
                            <br />
                            <div class="col">
                                <div class="text-center">
                                    <button type="button" class="btn btn-success btn-sm" id="btn-aplicar-filtros" title="Aplicar filtros">
                                        <i class="fa fa-check-circle"></i> Filtrar
                                    </button>
                                    <button class="btn btn-secondary btn-sm" type="reset" id="btnFilter" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample" title="Fechar filtros">
                                        <i class="fa fa-close"></i> Fechar
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card-body">
                <div><h5>USUÁRIOS</h5></div>

                <div id="users-grid"></div>
                <script>

                $(document).ready(function () {
                $("#users-grid").kendoGrid({

                    dataSource: {
                    type: "json",
                transport: {
                read: {
                    url: "@Html.Raw(Url.Action("GetUser", "User"))",
                    type: "POST",
                    dataType: "json",
                    data: additionalData
                    }
                },
                schema: {
                    data: "Data",
                    total: "Total",
                    errors: "Errors"
                },
                    error: function (e) {
                    display_kendoui_grid_error(e);
                    this.cancelChanges();
                },
                    pageSize: 10,
                    serverPaging: true,
                    serverFiltering: true,
                    serverSorting: false
                },
                    resizable: true,
                    groupable: true,
                    sortable: true,
                pageable: {
                    refresh: true,
                    pageSizes: true,
                    buttonCount: 5,
                messages: {
                    display: '{0} - {1} de {2} itens',
                    allPages: 'Todos',
                    itemsPerPage: 'Itens por página'
                }
                },
                    columns: [{

                        field: "",
                        title: "Comandos",
                        width: 230,
                        headerAttributes: { style: "text-align:left" },
                        attributes: { style: "text-align:center" },
                        template: '<div title="Editar Registro" class="btn btn-primary btn-sm text-center" onclick="Edit(#=UserID#)" data-toggle="modal" data-target="\\#MaintenanceModal"> <i class="fa fa-edit"></i> </div> ' +
                            '<div title="Excluir Registro" class="btn btn-danger btn-sm text-center" onclick="Delete(#=UserID#)" data-toggle="modal" data-target="\\#DeleteModal"> <i class="fa fa-trash"></i> </div> ' +
                            '<div title="Liberar apropriação de horas retroativas" class="btn btn-dark btn-sm text-center" onclick="AllowApropriate(#=UserID#)" data-toggle="modal" data-target="\\#AllowApropriateModal"> <i class="fa fa-calendar"></i> </div> ' +
                            '<div title="Associar Grupo" class="btn btn-info btn-sm text-center" onclick="GroupAssociate(#=UserID#)" data-toggle="modal" data-target="\\#GroupAssociateModal"> <i class="fa fa-group"></i> </div> ' +
                            '<div title="Associar Empresas" class="btn btn-secondary btn-sm text-center" onclick="CustomerAssociate(#=UserID#)" data-toggle="modal" data-target="\\#CustomerAssociateModal"> <i class="fa fa-institution"></i> </div> ' +
                            '# if(IsActive == false)  {# <div title="Ativar" class="btn btn-warning btn-sm text-center" onclick="ChangeStatus(#=UserID#)" data-toggle="modal" data-target="\\#ChangeStatusModal"> <i class="fa fa-bell-slash" text-danger false-icon"></i></div> #} else ' +
                            '{# <div title="Desativar" class="btn btn-success btn-sm" text-center" onclick="ChangeStatus(#=UserID#)" data-toggle="modal" data-target="\\#ChangeStatusModal"> <i class="fa fa-bell" text-danger false-icon"></i></div> #}  # '
                    }, {
                        field: "IsEmployee",
                        title: "Funcionário",
                        width: 100,
                        headerAttributes: { style: "text-align:center" },
                        attributes: { class: "text-center" },
                        template: '# if(IsEmployee == false)  {# <i class="fa fa-close text-danger false-icon"></i> #} else {# <i class="fa fa-check text-success true-icon"></i> #} #'
                    }, {
                        field: "IsAdmin",
                        title: "Admin",
                        width: 100,
                        headerAttributes: { style: "text-align:center" },
                        attributes: { class: "text-center" },
                        template: '# if(IsAdmin == false)  {# <i class="fa fa-close text-danger false-icon"></i> #} else {# <i class="fa fa-check text-success true-icon"></i> #} #'
                    }, {
                        field: "UserName",
                        title: "Nome do Usuário",
                        width: 250,
                        headerAttributes: { style: "text-align:left" }
                    }, {
                        field: "Email",
                        title: "E-mail",
                        width: 300,
                        headerAttributes: { style: "text-align:left" }
                    },  {

                        field: "DepartmentID",
                        title: "Departamento",
                        width: 200,
                        headerAttributes: { style: "text-align:left" }
                    }, {
                        field: "FunctionID",
                        title: "Função",
                        width: 200,
                        headerAttributes: { style: "text-align:left" }
                    }, {
                        field: "AccessToDate",
                        title: "Acesso permitido até",
                        width: 200,
                        headerAttributes: { style: "text-align:left" }
                    }, {
                        field: "UpdateRecordTo",
                        title: "Limite para atualização",
                        width: 200,
                        headerAttributes: { style: "text-align:left" }
                    }, {
                        field: "ReleaseDateUpdateRecordTo",
                        title: "Limíte retroativo",
                        width: 200,
                        headerAttributes: { style: "text-align:left" }
                    }],
                    excelExport: function (e) {
                        e.workbook.fileName = "LeanTest Cloud - Usuários.xlsx";
                    }
                });
            });

                </script>
                <script type="text/javascript">
                $(document).ready(function () {
                    $('#btnExportExcel').click(function () {
                        var grid = $('#users-grid').data('kendoGrid');
                        grid.saveAsExcel();
                        return false;
                    });

                    $('#btn-aplicar-filtros').click(function () {
                        var grid = $('#users-grid').data('kendoGrid');
                        if (grid.dataSource.page() == 1) {
                            grid.dataSource.page(1);
                        }
                        else {
                            grid.dataSource.read({ parameter: "value" });
                        }
                        return false;
                    });

                    $("#@Html.FieldIdFor(model => model.SearchUserName)").keydown(function (event) {
                        if (event.keyCode == 13) {
                            $("#btn-aplicar-filtros").click();
                            return false;
                        }
                    });

                    $("#@Html.FieldIdFor(model => model.SearchEmail)").keydown(function (event) {
                        if (event.keyCode == 13) {
                            $("#btn-aplicar-filtros").click();
                            return false;
                        }
                    });

                    $("#@Html.FieldIdFor(model => model.SearchDepartmentID)").keydown(function (event) {
                        if (event.keyCode == 13) {
                            $("#btn-aplicar-filtros").click();
                            return false;
                        }
                    });

                    $("#@Html.FieldIdFor(model => model.SearchFunctionID)").keydown(function (event) {
                        if (event.keyCode == 13) {
                            $("#btn-aplicar-filtros").click();
                            return false;
                        }
                    });


                });

                function additionalData() {
                    var data = {
                        SearchUserName: $('#@Html.FieldIdFor(model => model.SearchUserName)').val(),
                        SearchEmail: $('#@Html.FieldIdFor(model => model.SearchEmail)').val(),
                        SearchDepartmentID: $('#@Html.FieldIdFor(model => model.SearchDepartmentID)').val(),
                        SearchFunctionID: $('#@Html.FieldIdFor(model => model.SearchFunctionID)').val(),
                    };
                    addAntiForgeryToken(data);
                    return data;
                    };

                    var Delete = function (userID) {
                        var url = '/User/GetByID?userID=' + userID + '&ActionName=Delete';

                        $('#DeleteModalDiv').load(url, function () {

                        })
                    };

                    var Edit = function (userID) {
                        var url = '/User/GetByID?userID=' + userID + '&ActionName=Maintenance';

                        $('#MaintenanceModalDiv').load(url, function () {

                        })

                        $('#MaintenanceModal').on('shown.bs.modal', function () {

                            $('#calender-container .input-group.date').datepicker({
                                multidate: false,
                                multidateSeparator: ";",
                                autoclose: true,
                                daysOfWeekHighlighted: "0,6",
                                todayBtn: true,
                                todayHighlight: true,
                                format: 'dd/mm/yyyy',
                                language: 'pt-BR'
                            });

                        });
                    };

                    var New = function () {
                        var url = '/User/New';

                        $('#AddModalDiv').load(url, function () {

                        })

                        $('#AddModal').on('shown.bs.modal', function () {

                            $('#calender-container .input-group.date').datepicker({
                                multidate: false,
                                multidateSeparator: ";",
                                autoclose: true,
                                daysOfWeekHighlighted: "0,6",
                                todayBtn: true,
                                todayHighlight: true,
                                format: 'dd/mm/yyyy',
                                language: 'pt-BR'
                            });

                        });
                    };

                    var ChangeStatus = function (userID) {
                        var url = '/User/GetByID?userID=' + userID + '&ActionName=ChangeStatus';

                        $('#ChangeStatusModalDiv').load(url, function () {

                        })
                    };

                    var AllowApropriate = function (userID) {
                        var url = '/User/GetByID?userID=' + userID + '&ActionName=AllowApropriate';

                        $('#AllowApropriateModalDiv').load(url, function () {

                        })

                        $('#AllowApropriateModal').on('shown.bs.modal', function () {

                            //permite selecionar mais de uma data
                            $('#calender-container .input-group.date').datepicker({
                                multidate: false,
                                multidateSeparator: ";",
                                autoclose: true,
                                daysOfWeekHighlighted: "0,6",
                                todayBtn: true,
                                todayHighlight: true,
                                format: 'dd/mm/yyyy',
                                language: 'pt-BR'
                            });

                        });
                    };

                    var CustomerAssociate = function (userID) {
                        var url = '/User/CustomerAssociate?userID=' + userID;

                        $('#CustomerAssociateModalDiv').load(url, function () {

                        })
                    };

                    var GroupAssociate = function (userID) {
                        var url = '/User/GroupAssociate?userID=' + userID;

                        $('#GroupAssociateModalDiv').load(url, function () {

                        })
                    };

                    var Add = function () {
                        var url = '/User/Add?model=' + @Model;

                        $('#AddModalDiv').load(url, function () {

                        })
                    };


                </script>
            </div>
        </div>
    </div>

}

