    ViewBag.Title = " - Despesas";
    Layout = "~/Views/Shared/_ContentPage.cshtml";
}

@using (Html.BeginForm())
{
    <div class="container-fluid">
        <br />
        <div class="content-header clearfix">

            <div class="pull-left">


                <button type="button" onclick="Add()" id="btnNew" class="btn btn-dark btn-sm" data-toggle="modal" data-target='#AddModal' title="Novo Registro">
                    <i class="fa fa-win"></i> Novo
                </button>
                <button class="btn btn-primary btn-sm" type="button" id="btnFiltrar" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample" title="Filtrar">
                    <i class="fa fa-filter"></i> Filtrar
                </button>
                <button type="button" id="btnExportExcel" class="btn btn-info btn-sm" title="Exportar para Excel">
                    <i class="fa fa-file-excel-o"></i> Exportar para Excel
                </button>
                @if (Convert.ToString(Session["isAdmin"]) == "True")
                {
            <button type="button" onclick="GetReport()" id="btnGetReport" class="btn btn-success btn-sm" data-toggle="modal" data-target='#ReportModal' title="Relatórios de Despesas">
                <i class="fa fa-file-excel-o"></i> Relatórios de Despesas
            </button>
                }
            </div>
        </div>
        <br />

        <div class="card">

            <div class="collapse" id="collapseExample">
                <div class="card card-body">
                    <div class="row">
                        <div class="col-md-12 mx-auto">
                            <div class="form-group row" id="calender-container">
                                @Html.LabelFor(model => model.SearchRegisterDateFrom, new { @class = "col-sm-2 col-form-label text-right" })
                                <div class="col-sm-3">
                                    <div class="input-group date">
                                        @Html.TextBoxFor(model => model.SearchRegisterDateFrom, new { @class = "form-control", autocomplete = "off" })<span class="input-group-addon"></span>
                                    </div>
                                </div>
                                @Html.LabelFor(model => model.SearchCustomerID, new { @class = "col-sm-2 col-form-label text-right" })
                                <div class="col-sm-3">
                                    @Html.DropDownList("SearchCustomerID", Model.SearchLoadCustomers, "Selecione...", new { @class = "form-control" })
                                </div>
                            </div>

                            <div class="form-group row" id="calender-container">
                                @Html.LabelFor(model => model.SearchRegisterDateTo, new { @class = "col-sm-2 col-form-label text-right" })
                                <div class="col-sm-3">
                                    <div class="input-group date">
                                        @Html.TextBoxFor(model => model.SearchRegisterDateTo, new { @class = "form-control", autocomplete = "off" })<span class="input-group-addon"></span>
                                    </div>
                                </div>
                                @Html.LabelFor(model => model.SearchDemandID, new { @class = "col-sm-2 col-form-label text-right" })
                                <div class="col-sm-3">
                                    @Html.DropDownList("SearchDemandID", Model.SearchLoadDemands, "Selecione...", new { @class = "form-control" })
                                </div>
                            </div>

                            <div class="form-group row">
                                @Html.LabelFor(model => model.SearchDescription, new { @class = "col-sm-2 col-form-label text-right" })
                                <div class="col-sm-3">
                                    @Html.TextBoxFor(model => model.SearchDescription, new { @class = "form-control", })
                                </div>
                                @Html.LabelFor(model => model.SearchTypeExpenseID, new { @class = "col-sm-2 col-form-label text-right" })
                                <div class="col-sm-3">
                                    @Html.DropDownList("SearchTypeExpenseID", Model.SearchLoadTypeExpenses, "Selecione...", new { @class = "form-control" })
                                </div>
                            </div>

                            <div class="form-group row">
                                @Html.LabelFor(model => model.SearchStatusID, new { @class = "col-sm-2 col-form-label text-right" })
                                <div class="col-sm-3">
                                    @Html.DropDownList("SearchStatusID", Model.SearchLoadStatus, "Selecione...", new { @class = "form-control" })
                                </div>
                                @if (Convert.ToString(Session["isAdmin"]) == "True")
                                {
                                    @Html.LabelFor(model => model.SearchCreatedByID, new { @class = "col-sm-2 col-form-label text-right" })
                                    <div class="col-sm-3">
                                        @Html.DropDownList("SearchCreatedByID", Model.SearchLoadCreateds, "Selecione...", new { @class = "form-control" })
                                    </div>
                                }

                            </div>
                            <div class="form-group row">
                                @Html.LabelFor(model => model.SearchDepartmentID, new { @class = "col-sm-2 col-form-label text-right" })
                                <div class="col-sm-3">
                                    @Html.DropDownList("SearchDepartmentID", Model.SearchLoadDepartments, "Selecione...", new { @class = "form-control" })
                                </div>
                            </div>
                            <br />
                            <div class="col">
                                <div class="text-center">
                                    <button type="button" class="btn btn-success btn-sm" id="btn-aplicar-filtros" title="Aplicar filtros">
                                        <i class="fa fa-check-circle"></i> Filtrar
                                    </button>
                                    <button class="btn btn-secondary btn-sm" type="reset" id="btnFiltrar" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample" title="Fechar filtros">
