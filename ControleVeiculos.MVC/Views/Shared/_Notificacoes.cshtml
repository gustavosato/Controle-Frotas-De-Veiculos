@{
    //success message
    var successMessages = new List<string>();
    if (TempData[string.Format("notifications.{0}", NotifyType.Success)] != null)
    {
        successMessages.AddRange(TempData[string.Format("notifications.{0}", NotifyType.Success)] as IList<string>);
    }
    if (ViewData[string.Format("notifications.{0}", NotifyType.Success)] != null)
    {
        successMessages.AddRange(ViewData[string.Format("notifications.{0}", NotifyType.Success)] as IList<string>);
    }

    //error message
    var errorMessages = new List<string>();
    if (TempData[string.Format("notifications.{0}", NotifyType.Error)] != null)
    {
        errorMessages.AddRange(TempData[string.Format("notifications.{0}", NotifyType.Error)] as IList<string>);
    }
    if (ViewData[string.Format("notifications.{0}", NotifyType.Error)] != null)
    {
        errorMessages.AddRange(ViewData[string.Format("notifications.{0}s", NotifyType.Success)] as IList<string>);
    }

    //warning message
    var warningMessages = new List<string>();
    if (TempData[string.Format("notifications.{0}", NotifyType.Warning)] != null)
    {
        warningMessages.AddRange(TempData[string.Format("notifications.{0}", NotifyType.Warning)] as IList<string>);
    }
    if (ViewData[string.Format("notifications.{0}", NotifyType.Warning)] != null)
    {
        warningMessages.AddRange(ViewData[string.Format("notifications.{0}", NotifyType.Warning)] as IList<string>);
    }

    //info message
    var infoMessages = new List<string>();
    if (TempData[string.Format("notifications.{0}", NotifyType.Info)] != null)
    {
        infoMessages.AddRange(TempData[string.Format("notifications.{0}", NotifyType.Info)] as IList<string>);
    }
    if (ViewData[string.Format("", NotifyType.Info)] != null)
    {
        infoMessages.AddRange(ViewData[string.Format("notifications.{0}", NotifyType.Info)] as IList<string>);
    }
}
@foreach (var message in successMessages)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @Html.Raw(message)
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

@foreach (var message in errorMessages)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @Html.Raw(message)
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}
@foreach (var message in warningMessages)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        @Html.Raw(message)
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}
@foreach (var message in infoMessages)
{
    <div class="alert alert-info alert-dismissible fade show" role="alert">
        @Html.Raw(message)
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
            @Html.Raw(message)
        </button>
    </div>
}