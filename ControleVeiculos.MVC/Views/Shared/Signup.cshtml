@model ControleVeiculos.MVC.Models.Users.UserModel

@Html.AntiForgeryToken()

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<div class="form-group row">
    <div class="col-md-12">
        @Html.LabelFor(model => model.UserName, new { @class = "col-sm-0 col-form-label text-left" })
        @Html.TextBoxFor(model => model.UserName, new { @class = "form-control text-left", placeholder = "Digite seu nome completo", @autofocus = "autofocus", autocomplete = "off" })
        @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "form-text text-danger" })
    </div>
    <div class="col-md-12">
        @Html.LabelFor(model => model.EmailNew, new { @class = "col-sm-0 col-form-label text-left" })
        @Html.TextBoxFor(model => model.EmailNew, new { @class = "form-control text-left", placeholder = "Digite seu e-mail", autocomplete = "off" })
        @Html.ValidationMessageFor(model => model.EmailNew, "", new { @class = "form-text text-danger" })
    </div>
    <div class="col-md-12">
        @Html.LabelFor(model => model.EmailNewConfirm, new { @class = "col-sm-0 col-form-label text-left" })
        @Html.TextBoxFor(model => model.EmailNewConfirm, new { @class = "form-control text-left", placeholder = "Confirmar seu e-mail", autocomplete = "off" })
        @Html.ValidationMessageFor(model => model.EmailNewConfirm, "", new { @class = "form-text text-danger" })
    </div>

    <div class="col-md-12">
        @Html.LabelFor(model => model.PasswordNew, new { @class = "col-sm-0 col-form-label text-left" })
        @Html.PasswordFor(model => model.PasswordNew, new { @class = "form-control", placeholder = "Digite a senha", autocomplete = "off" })
        @Html.ValidationMessageFor(model => model.PasswordNew, "", new { @class = "form-text text-danger" })
    </div>
    <div class="col-md-12">
        @Html.LabelFor(model => model.PasswordNewConfirm, new { @class = "col-sm-0 col-form-label text-left" })
        @Html.PasswordFor(model => model.PasswordNewConfirm, new { @class = "form-control", placeholder = "Confirme a senha", autocomplete = "off" })
        @Html.ValidationMessageFor(model => model.PasswordNewConfirm, "", new { @class = "form-text text-danger" })
    </div>

    <div class="col-md-12 mb-auto">
        @Html.LabelFor(model => model.Description, new { @class = "col-sm-0 col-form-label text-left" })
        @Html.TextAreaFor(model => model.Description, new { @class = "form-control", placeholder = "Digite uma descrição sobre o projeto e empresa a qual pertence", rows = "2" })
        @Html.ValidationMessageFor(model => model.Description, "", new { @class = "form-text text-danger" })
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $("#UserName").empty();
        $("#EmailNew").empty();
        $("#EmailNewConfirm").empty();
        $("#PasswordNew").empty();
        $("#PasswordNewConfirm").empty();

    });
</script>