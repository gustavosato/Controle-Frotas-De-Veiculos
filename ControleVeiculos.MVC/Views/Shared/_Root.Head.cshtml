    <script type="text/javascript">
        $(document).ready(function () {
            $('input', 'form').blur(function () {
                $(this).valid();
            });

            $('#calender-container .input-group.date').datepicker({
                multidate: false,
                multidateSeparator: ";",
                autoclose: true,
                daysOfWeekHighlighted: "0,6",
                todayBtn: true,
                todayHighlight: true,
                format: 'dd/mm/yyyy',
                language: 'pt-BR'
            });

        });
    </script>


