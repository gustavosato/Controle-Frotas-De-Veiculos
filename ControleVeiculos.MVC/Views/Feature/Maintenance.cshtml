@model ControleVeiculos.MVC.Models.Features.FeatureModel

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>


@Html.HiddenFor(model => model.FeatureID)
@Html.HiddenFor(model => model.CustomerID)
@Html.HiddenFor(model => model.CreatedByID)
@Html.HiddenFor(model => model.CreationDate)

<ul class="nav nav-tabs" id="myTab" role="tablist">
    <li class="nav-item">
        <a class="nav-link active" id="home-tab" data-toggle="tab" href="#details" role="tab" aria-controls="details" aria-selected="true">Detalhes</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" id="profile-tab" data-toggle="tab" href="#metascript" role="tab" aria-controls="metascript" aria-selected="false">Meta Script</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" id="profile-tab" data-toggle="tab" href="#script" role="tab" aria-controls="script" aria-selected="false">Script</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" id="contact-tab" data-toggle="tab" href="#test" role="tab" aria-controls="test" aria-selected="false">...</a>
    </li>
</ul>

<div class="tab-content" id="myTabContent">
    <div class="tab-pane fade show active" id="details" role="tabpanel" aria-labelledby="home-tab">
        <div class="form-group row">
            <div class="col-md-3 mb-auto">
                <strong>@Html.LabelFor(model => model.ApplicationSystemID, new { @class = "col-sm-0 col-form-label text-left" })</strong>
                <strong><span style="color:black;">*</span></strong>
                @Html.DropDownList("ApplicationSystemID", Model.LoadApplications, "Selecione...", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ApplicationSystemID, "", new { @class = "form-text text-danger" })
            </div>
            <div class="col-md-7 mb-auto">
                <strong>@Html.LabelFor(model => model.FeatureName, new { @class = "col-sm-0 col-form-label text-left" })</strong>
                <strong><span style="color:black;">*</span></strong>
                @Html.TextBoxFor(model => model.FeatureName, new { @class = "form-control text-left", placeholder = "Digite o nome", @autofocus = "autofocus" })
                @Html.ValidationMessageFor(model => model.FeatureName, "", new { @class = "form-text text-danger" })
            </div>

            <div class="col-md-2 mb-auto">
                @Html.LabelFor(model => model.CreationDate, new { @class = "col-sm-0 col-form-label text-left" })

                @Html.TextBoxFor(model => model.CreationDate, new { @class = "form-control text-left", placeholder = "Gerado automaticamente", @readonly = "readonly" })
                @Html.ValidationMessageFor(model => model.CreationDate, "", new { @class = "form-text text-danger" })
            </div>
            <div class="col-md-3 mb-auto">
                @Html.LabelFor(model => model.StatusID, new { @class = "col-sm-0 col-form-label text-left" })

                @Html.DropDownList("StatusID", Model.LoadStatus, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.StatusID, "", new { @class = "form-text text-danger" })
            </div>
            <div class="col-md-2 mb-auto">
                @Html.LabelFor(model => model.FeatureTypeID, new { @class = "col-sm-0 col-form-label text-left" })

                @Html.DropDownList("FeatureTypeID", Model.LoadFeatureTypes, "Selecione...", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.FeatureTypeID, "", new { @class = "form-text text-danger" })
            </div>
            <div class="col-md-2 mb-auto">
                @Html.LabelFor(model => model.DeveloperID, new { @class = "col-sm-0 col-form-label text-left" })

                @Html.DropDownList("DeveloperID", Model.LoadDevelopers, "Selecione...", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.DeveloperID, "", new { @class = "form-text text-danger" })
            </div>
            <div class="col-md-1 mb-auto">
                @Html.LabelFor(model => model.TestPoints, new { @class = "col-sm-0 col-form-label text-left" })

                @Html.TextBoxFor(model => model.TestPoints, new { @class = "form-control text-left", placeholder = "Digite", @type = "number", @maxlength = "4" })
                @Html.ValidationMessageFor(model => model.TestPoints, "", new { @class = "form-text text-danger" })
            </div>
            <div class="col-md-2 mb-auto" onkeypress="return NumberOnly(event);">
                <strong>@Html.LabelFor(model => model.TimeEffort, new { @class = "col-sm-0 col-form-label text-left" })</strong>
                <strong><span style="color:black;">*</span></strong>
                @Html.TextBoxFor(model => model.TimeEffort, new { @class = "form-control text-left", placeholder = "Digite", id = "TimeEffort" })
                @Html.ValidationMessageFor(model => model.TimeEffort, "", new { @class = "form-text text-danger" })
            </div>

            <div class="col-md-2 mb-auto" id="calender-container">
                @Html.LabelFor(model => model.TargetDate, new { @class = "col-sm-0 col-form-label text-left" })
                <div class="input-group date">
                    @Html.TextBoxFor(model => model.TargetDate, new { @class = "form-control", autocomplete = "off" })<span class="input-group-addon"></span>
                    @Html.ValidationMessageFor(model => model.TargetDate, "", new { @class = "form-text text-danger" })
                </div>
            </div>
            <div class="col-md-12 mb-auto">
                @Html.LabelFor(model => model.Description, new { @class = "col-sm-0 col-form-label text-left" })
                @Html.TextAreaFor(model => model.Description, new { @class = "form-control", placeholder = "Digite uma descrição", rows = "2" })
                <script>
                    $(document).ready(function () {
                        $("#Description").kendoEditor({
                            tools: [
                                "formatting",
                                "bold", "italic", "underline", "strikethrough",
                                "justifyLeft", "justifyCenter", "justifyRight", "justifyFull",
                                "insertUnorderedList", "insertOrderedList", "indent", "outdent",
                                "createLink", "unlink", "insertImage", "insertFile",
                                "subscript", "superscript",
                                "tableWizard", "createTable",
                                "addRowAbove", "addRowBelow",
                                "addColumnLeft", "addColumnRight",
                                "deleteRow", "deleteColumn",
                                "viewHtml", "cleanFormatting",
                                "fontName", "fontSize",
                                "foreColor", "backColor"
                            ],
                            messages: {
                                fontNameInherit: "Arial",
                                fontSizeInherit: "3 (12pt)"
                            },
                            resizable: true
                        });
                    });
                </script>
            </div>
        </div>
    </div>
    <div class="tab-pane fade" id="metascript" role="tabpanel" aria-labelledby="profile-tab">
        <div class="col-md-12 mb-auto">
            <strong>@Html.LabelFor(model => model.MetaScript, new { @class = "col-sm-0 col-form-label text-left" })</strong>                        <strong><span style="color:black;">*</span></strong>
            <strong><span style="color:black;">*</span></strong>
            @Html.TextAreaFor(model => model.MetaScript, new { @class = "form-control", placeholder = "Geração automática", rows = "20", @readonly = "readonly" })
        </div>
    </div>
    <div class="tab-pane fade" id="script" role="tabpanel" aria-labelledby="profile-tab">
        <div class="col-md-12 mb-auto">
            <strong>@Html.LabelFor(model => model.AutomationScript, new { @class = "col-sm-0 col-form-label text-left" })</strong>
            <strong><span style="color:black;">*</span></strong>
            @Html.TextAreaFor(model => model.AutomationScript, new { @class = "form-control", placeholder = "Geração automática", rows = "20", @readonly = "readonly" })
        </div>
    </div>

</div>

<script language='JavaScript'>
    function NumberOnly(e) {
        var tecla = (window.event) ? e.keyCode : e.which;
        if (tecla == 8 || tecla == 0)
            return true;
        if (tecla != 44 && tecla < 48 || tecla > 57)
            return false;
    }

    $('#TimeEffort').bind('cut copy paste', function (e) {
        e.preventDefault();
    });

  
</script>﻿﻿

