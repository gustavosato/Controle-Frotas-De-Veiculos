@model ControleVeiculos.MVC.Models.Attachments.AttachmentModel

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@Html.HiddenFor(model => model.AttachmentID)
@Html.HiddenFor(model => model.CreatedByID)
@Html.HiddenFor(model => model.RecordID)
@Html.HiddenFor(model => model.PathFile)

<div class="form-group row">

    <div class="col-md-8 mb-auto">
        <strong>@Html.LabelFor(model => model.FileName, new { @class = "col-sm-0 col-form-label text-left" })</strong>
        <strong><span style="color:black;">*</span></strong>
        @Html.TextBoxFor(model => model.FileName, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.FileName, "", new { @class = "form-text text-danger" })
    </div>
    <div class="col-md-2 mb-auto">
        <strong>@Html.LabelFor(model => model.SizeFile, new { @class = "col-sm-0 col-form-label text-left" })</strong>
        <strong><span style="color:black;">*</span></strong>
        @Html.TextBoxFor(model => model.SizeFile, new { @class = "form-control", @readonly = "readonly" })
        @Html.ValidationMessageFor(model => model.SizeFile, "", new { @class = "form-text text-danger" })
    </div>

    <div class="col-md-2 mb-auto">
        @Html.LabelFor(model => model.CreationDate, new { @class = "col-sm-0 col-form-label text-left" })

        @Html.TextBoxFor(model => model.CreationDate, new { @class = "form-control text-left", @readonly = "readonly" })
        @Html.ValidationMessageFor(model => model.CreationDate, "", new { @class = "form-text text-danger" })
    </div>
    <div class="col-md-8 mb-auto">
        <input type="file" name="file" />
    </div>
    <div class="col-md-12 mb-auto">
        <strong>@Html.LabelFor(model => model.SystemFeatureID, new { @class = "col-sm-0 col-form-label text-left" })</strong>
        <strong><span style="color:black;">*</span></strong>
        @Html.DropDownList("SystemFeatureID", Model.LoadSystemFeature, "Selecione...", new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.SystemFeatureID, "", new { @class = "form-text text-danger" })
    </div>
    <div class="col-md-12 mb-auto">
        <br />
        @Html.TextAreaFor(model => model.Description, new { @class = "form-control", placeholder = "Digite uma descrição", rows = "4" })
    </div>
</div>

