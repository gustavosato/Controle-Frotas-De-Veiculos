@model ControleVeiculos.MVC.Models.Customers.CustomerModel
@{
    ViewBag.Title = " - Empresas";
    Layout = "~/Views/Shared/_ContentPage.cshtml";
}

@using (Html.BeginForm())
{
    <div class="container-fluid">
        <br />
        <div class="content-header clearfix">

            <div class="pull-left">


                <button type="button" onclick="Add()" id="btnNew" class="btn btn-dark btn-sm" data-toggle="modal" data-target='#AddModal' title="Novo Registro">
                    <i class="fa fa-plus-circle"></i> Novo
                </button>
                <button class="btn btn-primary btn-sm" type="button" id="btnFiltrar" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample" title="Filtrar">
                    <i class="fa fa-filter"></i> Filtrar
                </button>
                <button type="button" id="btnExportExcel" class="btn btn-info btn-sm" title="Exportar para Excel">
                    <i class="fa fa-file-excel-o"></i> Exportar para Excel
                </button>
            </div>
        </div>
        <br />

        <div class="card">

            <div class="collapse" id="collapseExample">
                <div class="card card-body">
                    <div class="row">
                        <div class="col-md-12 mx-auto">
                            <div class="form-group row">
                                <div class="col-sm-12">
                                    @Html.LabelFor(model => model.SearchCustomerName, new { @class = "col-sm-0 col-form-label text-right" })

                                    @Html.TextBoxFor(model => model.SearchCustomerName, null, new { @class = "form-control" })
                                </div>
                            </div>

                            <br />
                            <div class="col">
                                <div class="text-center">
                                    <button type="button" class="btn btn-success" id="btn-aplicar-filtros" title="Aplicar filtros">
                                        <i class="fa fa-check-circle"></i> Filtrar
                                    </button>
                                    <button class="btn btn-secondary btn-sm" type="reset" id="btnFiltrar" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample" title="Fechar filtros">
                                        <i class="fa fa-close"></i> Fechar
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card-body">
                <div><h5>EMPRESAS</h5></div>

                <div id="customers-grid"></div>
                <script>

                $(document).ready(function () {
                $("#customers-grid").kendoGrid({

                dataSource: {
                    type: "json",
                transport: {
                read: {
                    url: "@Html.Raw(Url.Action("GetAll", "Customer"))",
                    type: "POST",
                    dataType: "json",
                    data: additionalData
                    }
                },
                schema: {
                    data: "Data",
                    total: "Total",
                    errors: "Errors"
                },
                    error: function (e) {
                    display_kendoui_grid_error(e);
                    this.cancelChanges();
                },
                    pageSize: 10,
                    serverPaging: true,
                    serverFiltering: true,
                    serverSorting: false
                },
                    resizable: true,
                    groupable: true,
                    sortable: true,
                pageable: {
                    refresh: true,
                    pageSizes: true,
                    buttonCount: 5,
                messages: {
                    display: '{0} - {1} de {2} itens',
                    allPages: 'Todos',
                    itemsPerPage: 'Itens por página'
                }
                },
                    columns: [{
                        field: "",
                        title: "Comandos",
                        width: 150,
                        headerAttributes: { style: "text-align:center" },
                        attributes: { style: "text-align:center" },
                        template: '<div title="Editar Registro" class="btn btn-primary btn-sm  text-center" onclick="Edit(#=CustomerID#)" data-toggle="modal" data-target="\\#MaintenanceModal"> <i class="fa fa-edit"></i> </div> ' +
                        '<div title="Excluir Registro" class="btn btn-danger btn-sm  text-center" onclick="Delete(#=CustomerID#)" data-toggle="modal" data-target="\\#DeleteModal"> <i class="fa fa-trash"></i> </div> ' +
                        '<div title="Associar usuários" class="btn btn-info btn-sm text-center" onclick="UserAssociate(#=CustomerID#)" data-toggle="modal" data-target="\\#UserAssociateModal"> <i class="fa fa-group"></i> </div> ' +
                        '# if(IsActive == "False")  {# <div title="Ativar" class="btn btn-warning btn-sm  text-center" onclick="GetByIDActive(#=CustomerID#)" data-toggle="modal" data-target="\\#ActiveDesactiveCustomerModal"> <i class="fa fa-bell-slash" text-danger false-icon"></i></div> #} else ' +
                        '{# <div title="Desativar" class="btn btn-success btn-sm text-center" onclick="GetByIDActive(#=CustomerID#)" data-toggle="modal" data-target="\\#ActiveDesactiveCustomerModal"> <i class="fa fa-bell" text-danger false-icon"></i></div> #}  # '
                    }, {
                        field: "IsActive",
                        title: "Status",
                        width: 70,
                        headerAttributes: { style: "text-align:center" },
                        attributes: { class: "text-center" },
                        template: '# if(IsActive == "False") {# <i class="fa fa-close text-danger false-icon"></i> #} else  {# <i class="fa fa-check text-success true-icon"></i> #}   #'
                    }, {
                        field: "CustomerName",
                        title: "Empresa",
                        width: 200,
                        headerAttributes: { style: "text-align:left" }
                    }, {
                        field: "SegmentID",
                        title: "Segmento",
                        width: 200,
                        headerAttributes: { style: "text-align:left" }
                    }, {
                        field: "TypeID",
                        title: "Tipo",
                        width: 200,
                        headerAttributes: { style: "text-align:left" }
                    }, {
                        field: "Description",
                        title: "Descrição",
                        width: 300,
                        headerAttributes: { style: "text-align:left" }
                    }],
                    excelExport: function (e) {
                        e.workbook.fileName = "LeanTest Cloud - Empresas.xlsx";
                    }
                });
            });

                </script>
                <script type="text/javascript">
                    $(document).ready(function () {
                        $('#btnExportExcel').click(function () {
                            var grid = $('#customers-grid').data('kendoGrid');
                            grid.saveAsExcel();
                            return false;
                        });

                        $('#btn-aplicar-filtros').click(function () {
                            var grid = $('#customers-grid').data('kendoGrid');
                            if (grid.dataSource.page() == 1) {
                                grid.dataSource.page(1);
                            }
                            else {
                                grid.dataSource.read({ parameter: "value" });
                            }
                            return false;
                        });

                        $("#@Html.FieldIdFor(model => model.SearchCustomerName)").keydown(function (event) {
                            if (event.keyCode == 13) {
                                $("#btn-aplicar-filtros").click();
                                return false;
                            }
                        });

                    });

                function additionalData() {
                    var data = {
                        SearchCustomerName: $('#@Html.FieldIdFor(model => model.SearchCustomerName)').val()
                    };

                    addAntiForgeryToken(data);

                    return data;

                    };

                    var Delete = function (customerID) {
                        var url = '/Customer/GetByID?customerID=' + customerID + '&ActionName=Delete';

                        $('#DeleteModalDiv').load(url, function () {

                        })
                    };

                    var Edit = function (customerID) {
                        var url = '/Customer/GetByID?customerID=' + customerID + '&ActionName=Maintenance';

                        $('#MaintenanceModalDiv').load(url, function () {

                        })

                        $('#MaintenanceModal').on('shown.bs.modal', function () {

                            $('#calender-container .input-group.date').datepicker({
                                multidate: false,
                                multidateSeparator: ";",
                                autoclose: true,
                                daysOfWeekHighlighted: "0,6",
                                todayBtn: true,
                                todayHighlight: true,
                                format: 'dd/mm/yyyy',
                                language: 'pt-BR'
                            });

                        });
                    };

                    var Add = function () {
                        var url = '/Customer/New';

                        $('#AddModalDiv').load(url, function () {

                        })

                        $('#AddModal').on('shown.bs.modal', function () {

                            $('#calender-container .input-group.date').datepicker({
                                multidate: false,
                                multidateSeparator: ";",
                                autoclose: true,
                                daysOfWeekHighlighted: "0,6",
                                todayBtn: true,
                                todayHighlight: true,
                                format: 'dd/mm/yyyy',
                                language: 'pt-BR'
                            });

                        });
                    };

                    var GetByIDActive = function (customerID) {
                        var url = '/Customer/GetByID?customerID=' + customerID + '&ActionName=ActiveDesactiveCustomer';

                        $('#ActiveDesactiveCustomerModalDiv').load(url, function () {

                        })
                    };

                    var UserAssociate = function (customerID) {
                        var url = '/Customer/UserAssociate?customerID=' + customerID ;

                        $('#UserAssociateModalDiv').load(url, function () {

                        })
                    };

                </script>
            </div>
        </div>
    </div>

}

@using (Html.BeginForm("Add", "Customer", FormMethod.Post))
{
    <div class="modal fade" id="AddModal" role="dialog">
        <div class="modal-dialog modal-xl">
            <div class="modal-content">
                <div class="modal-header">
                    <h3 class="modal-title">Nova Empresa</h3>
                    <a href="#" class="close" data-dismiss="modal">&times;</a>
                </div>
                <div class="modal-body" id="AddModalDiv">
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-success" onclick="return ValidarCampo(event);">
                        <i class="fa fa-save"></i>  Salvar
                    </button>
                    <button type="button" class="btn btn-secondary btn-sm" data-dismiss="modal">
                        <i class="fa fa-close"></i>  Cancelar
                    </button>
                </div>
            </div>
        </div>
    </div>
}

