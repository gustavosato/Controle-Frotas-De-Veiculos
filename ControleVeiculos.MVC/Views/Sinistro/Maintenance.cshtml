@model ControleVeiculos.MVC.Models.Sinistros.SinistroModel

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@Html.HiddenFor(model => model.SinistroID)

<ul class="nav nav-tabs" id="myTab" role="tablist">
    <li class="nav-item">
        <a class="nav-link active" id="maintenance-tab" data-toggle="tab" href="#maintenance" role="tab" aria-controls="maintenance" aria-selected="true">Novo Funcionário</a>
    </li>
</ul>

<div class="tab-content" id="myTabContent">
    <div class="tab-pane fade show active" id="maintenance" role="tabpanel" aria-labelledby="maintenance-tab">
        <div class="card">
            <div class="card-body">
                <div class="form-group row">
                    <div class="col-md-6 mb-auto">
                        @Html.LabelFor(model => model.Apolice, new { @class = "col-sm-0 col-form-label text-left" })
                        @Html.TextBoxFor(model => model.Apolice, new { @class = "form-control", placeholder = "Digite o nome", @autofocus = "autofocus" })
                        @Html.ValidationMessageFor(model => model.Apolice, "", new { @class = "form-text text-danger" })
                    </div>
                    <div class="col-md-6 mb-auto">
                        @Html.LabelFor(model => model.Franquia, new { @class = "col-sm-0 col-form-label text-left" })
                        @Html.TextBoxFor(model => model.Franquia, new { @class = "form-control", placeholder = "Digite o endereço", @autofocus = "autofocus" })
                        @Html.ValidationMessageFor(model => model.Franquia, "", new { @class = "form-text text-danger" })
                    </div>

                    <div class="col-md-2 mb-auto">
                        @Html.LabelFor(model => model.TipoSinistro, new { @class = "col-sm-0 col-form-label text-left" })
                        @Html.TextBoxFor(model => model.TipoSinistro, new { @class = "form-control", placeholder = "Digite o cpf", @autofocus = "autofocus" })
                        @Html.ValidationMessageFor(model => model.TipoSinistro, "", new { @class = "form-text text-danger" })
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




