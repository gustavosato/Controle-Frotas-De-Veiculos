@model ControleVeiculos.MVC.Models.TestCases.TestCaseModel

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@Html.HiddenFor(model => model.TestCaseID)
@Html.HiddenFor(model => model.CreatedByID)
@Html.HiddenFor(model => model.CreationDate)

<ul class="nav nav-tabs" id="myTab" role="tablist">
    <li class="nav-item">
        <a class="nav-link active" id="maintenance-tab" data-toggle="tab" href="#maintenance" role="tab" aria-controls="maintenance" aria-selected="true">Novo Teste</a>
    </li>
</ul>

<div class="tab-content" id="myTabContent">
    <div class="tab-pane fade show active" id="maintenance" role="tabpanel" aria-labelledby="maintenance-tab">
        <div class="card">
            <div class="card-body">
                <div class="form-group row">
                    <div class="col-md-2 mb-auto">
                        @Html.LabelFor(model => model.ExecutionOrder, new { @class = "col-sm-0 col-form-label text-left" })
                        @Html.TextBoxFor(model => model.ExecutionOrder, new { @class = "form-control", placeholder = "Digite a ordem", @autofocus = "autofocus" })
                        @Html.ValidationMessageFor(model => model.ExecutionOrder, "", new { @class = "form-text text-danger" })
                    </div>

                    <div class="col-md-2 mb-auto">
                        @Html.LabelFor(model => model.StatusID, new { @class = "col-sm-0 col-form-label text-left" })
                        @Html.DropDownList("StatusID", Model.LoadStatus, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.StatusID, "", new { @class = "form-text text-danger" })
                    </div>

                    <div class="col-md-8 mb-auto">
                        <strong>@Html.LabelFor(model => model.TestCase, new { @class = "col-sm-0 col-form-label text-left" })</strong>
                        <span style="color:black;">*</span>
                        @Html.TextBoxFor(model => model.TestCase, new { @class = "form-control", placeholder = "Digite o nome do teste", @autofocus = "autofocus" })
                        @Html.ValidationMessageFor(model => model.TestCase, "", new { @class = "form-text text-danger" })
                    </div>

                    <div class="col-md-2 mb-auto">
                        @Html.LabelFor(model => model.Precondition, new { @class = "col-sm-0 col-form-label text-left" })
                        @Html.TextBoxFor(model => model.Precondition, new { @class = "form-control", placeholder = "Digite a precondição" })
                        @Html.ValidationMessageFor(model => model.Precondition, "", new { @class = "form-text text-danger" })
                    </div>

                    <div class="col-md-2 mb-auto">
                        @Html.LabelFor(model => model.ExpectedResult, new { @class = "col-sm-0 col-form-label text-left" })
                        @Html.TextBoxFor(model => model.ExpectedResult, new { @class = "form-control", placeholder = "Digite o resultado esperado" })
                        @Html.ValidationMessageFor(model => model.ExpectedResult, "", new { @class = "form-text text-danger" })
                    </div>

                    <div class="col-md-4 mb-auto">
                        <strong>@Html.LabelFor(model => model.FlowTestID, new { @class = "col-sm-0 col-form-label text-left" })</strong>
                        <span style="color:black;">*</span>
                        @Html.DropDownList("FlowTestID", Model.LoadFlowTest, "Selecione...", new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.FlowTestID, "", new { @class = "form-text text-danger" })
                    </div>

                    <div class="col-md-4 mb-auto">
                        <strong>@Html.LabelFor(model => model.TestTypeID, new { @class = "col-sm-0 col-form-label text-left" })</strong>
                        <span style="color:black;">*</span>
                        @Html.DropDownList("TestTypeID", Model.LoadTestType, "Selecione...", new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.TestTypeID, "", new { @class = "form-text text-danger" })
                    </div>

                    <div class="col-md-2 mb-auto">
                        <strong>@Html.LabelFor(model => model.FeatureID, new { @class = "col-sm-0 col-form-label text-left" })</strong>
                        <span style="color:black;">*</span>
                        @Html.DropDownList("FeatureID", Model.LoadFeature, "Selecione...", new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.FeatureID, "", new { @class = "form-text text-danger" })
                    </div>

                    <div class="col-md-2 mb-auto">
                        @Html.LabelFor(model => model.StartExecution, new { @class = "col-sm-0 col-form-label text-left" })
                        @Html.TextBoxFor(model => model.StartExecution, new { @class = "form-control", id = "StartExecution", @readonly = "readonly" })
                        @Html.ValidationMessageFor(model => model.StartExecution, "", new { @class = "form-text text-danger" })
                    </div>

                    <div class="col-md-2 mb-auto">
                        @Html.LabelFor(model => model.EndExecution, new { @class = "col-sm-0 col-form-label text-left" })
                        @Html.TextBoxFor(model => model.EndExecution, new { @class = "form-control", id = "EndExecution", @readonly = "readonly" })
                        @Html.ValidationMessageFor(model => model.EndExecution, "", new { @class = "form-text text-danger" })
                    </div>

                    <div class="col-md-2 mb-auto">
                        @Html.LabelFor(model => model.TimeExecution, new { @class = "col-sm-0 col-form-label text-left" })
                        @Html.TextBoxFor(model => model.TimeExecution, new { @class = "form-control", id = "TimeExecution", @readonly = "readonly" })
                        @Html.ValidationMessageFor(model => model.TimeExecution, "", new { @class = "form-text text-danger" })
                    </div>

                    <div class="col-md-2 mb-auto">
                        @Html.LabelFor(model => model.Release, new { @class = "col-sm-0 col-form-label text-left" })
                        @Html.TextBoxFor(model => model.Release, new { @class = "form-control", id = "Release", placeholder = "Digite a release" })
                        @Html.ValidationMessageFor(model => model.Release, "", new { @class = "form-text text-danger" })
                    </div>

                    <div class="col-md-2 mb-auto">
                        @Html.LabelFor(model => model.Cycle, new { @class = "col-sm-0 col-form-label text-left" })
                        @Html.TextBoxFor(model => model.Cycle, new { @class = "form-control", id = "Cycle", placeholder = "Digite o ciclo" })
                        @Html.ValidationMessageFor(model => model.Cycle, "", new { @class = "form-text text-danger" })
                    </div>

                    <div class="col-md-12 mb-auto">
                        @Html.LabelFor(model => model.Description, new { @class = "col-sm-0 col-form-label text-left" })
                        @Html.TextAreaFor(model => model.Description, new { @class = "form-control", placeholder = "Digite uma descrição", rows = "6" })
                        <script>
                            $(document).ready(function () {
                                $("#Description").kendoEditor({
                                    tools: [
                                        "formatting",
                                        "bold", "italic", "underline", "strikethrough",
                                        "justifyLeft", "justifyCenter", "justifyRight", "justifyFull",
                                        "insertUnorderedList", "insertOrderedList", "indent", "outdent",
                                        "createLink", "unlink", "insertImage", "insertFile",
                                        "subscript", "superscript",
                                        "tableWizard", "createTable",
                                        "addRowAbove", "addRowBelow",
                                        "addColumnLeft", "addColumnRight",
                                        "deleteRow", "deleteColumn",
                                        "viewHtml", "cleanFormatting",
                                        "fontName", "fontSize",
                                        "foreColor", "backColor"
                                    ],
                                    messages: {
                                        fontNameInherit: "Arial",
                                        fontSizeInherit: "3 (12pt)"
                                    },
                                    resizable: true
                                });
                            });
                        </script>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




