@model Lean.Test.Cloud.MVC.Models.TestScenarioFeatures.TestScenarioFeatureModel

@Html.HiddenFor(model => model.TestScenarioFeatureID)

@using (Html.BeginForm())
{
<div class="container-fluid">
    <div class="row">
        <div class="col-md-12 mx-auto">
            <div class="form-group row">
                @Html.LabelFor(model => model.SearchFeatureName, new { @class = "col-sm-2 col-form-label text-right" })
                <div class="col-sm-12">
                    @Html.TextBoxFor(model => model.SearchFeatureName, null, new { @class = "form-control" })
                </div>
            </div>
        </div>
    </div>
</div>
<div class="form-group row">
    <div class="col-md-6 mb-auto">
        <div class="container-fluid">
            <div class="card">
                <div class="card-body">
                    <div id="featureAssociated-grid"></div>
                    <script>
                        $(document).ready(function () {
                        $("#featureAssociated-grid").kendoGrid({

                        dataSource: {
                            type: "json",
                        transport: {
                        read: {
                            url: "@Html.Raw(Url.Action("GetAllAssociateTestScenarioByFeatureID", "TestScenario"))",
                            type: "POST",
                            dataType: "json",
                            data: additionalData
                            }
                        },
                        schema: {
                            data: "Data",
                            total: "Total",
                            errors: "Errors"
                        },
                            error: function (e) {
                            display_kendoui_grid_error(e);
                            this.cancelChanges();
                        },
                            pageSize: 10,
                            serverPaging: true,
                            serverFiltering: true,
                            serverSorting: false
                        },
                            resizable: true,
                            groupable: false,
                            sortable: true,
                        pageable: {
                            refresh: true,
                            pageSizes: true,
                            buttonCount: 5,
                        messages: {
                            display: '{0} - {1} de {2} itens',
                            allPages: 'Todos',
                            itemsPerPage: 'Itens por página'
                        }
                        },
                        columns: [{
                            field: "FeatureName",
                            title: "Funcionalidades",
                            width: 70,
                            headerAttributes: { style: "text-align:left" }
                        }, {
                            field: "ExecutionOrder",
                            title: "Ordem",
                            width: 25,
                            headerAttributes: { style: "text-align:left" }
                        }, {
                            field: "IsLoop",
                            title: "IsLoop",
                            width: 25,
                            headerAttributes: { style: "text-align:left" }
                        }, {
                            field: "",
                            title: "Excluir",
                            width: 20,
                            headerAttributes: { style: "text-align:center" },
                            attributes: { style: "text-align:center" },
                            template: '<div title="Desassociar Funcionalidade" class="btn btn-danger  btn-sm text-center" onclick="DisassociateFeature(#=TestScenarioFeatureID#)" > <i class="fa fa-close"></i> </div> '

                        }]
                    });
                 });

                    </script>
                    <script type="text/javascript">
                        $(document).ready(function () {
                               
                            $('#btn-aplicar-filtros').click(function () {
                                var grid = $('#featureAssociated-grid').data('kendoGrid');
                                if (grid.dataSource.page() == 1) {
                                    grid.dataSource.page(1);
                                }
                                else {
                                    grid.dataSource.read({ parameter: "value" });
                                }
                                return false;
                            });

                            $("#@Html.FieldIdFor(model => model.SearchFeatureName)").keydown(function (event) {
                                if (event.keyCode == 13) {
                                    $("#btn-aplicar-filtros").click();
                                    return false;
                                }
                            });

                        });

                            function additionalData() {
                                var data = {
                                    SearchFeatureName: $('#@Html.FieldIdFor(model => model.SearchFeatureName)').val()
                                };

                                addAntiForgeryToken(data);

                                return data;

                            };

                            var DisassociateFeature = function (testScenarioFeatureID) {
                                
                                var url = '/TestScenario/DisassociateFeature?testScenariofeatureID=' + testScenarioFeatureID;

                                $('#FeatureAssociateModalDiv').load(url, function () {

                                })

                                $("#btn-aplicar-filtros").click();

                                return false;
                            };

                    </script>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-6 mb-auto">

        <div class="container-fluid">
            <div class="card">

                <div class="card-body">
                    <div id="featureNoAssociated-grid"></div>
                    <script>

                        $(document).ready(function () {
                            $("#featureNoAssociated-grid").kendoGrid({

                        dataSource: {
                            type: "json",
                        transport: {
                        read: {
                            url: "@Html.Raw(Url.Action("GetAllNoAssociateTestScenarioByFeatureID", "TestScenario"))",
                            type: "POST",
                            dataType: "json",
                            data: additionalData
                            }
                        },
                        schema: {
                            data: "Data",
                            total: "Total",
                            errors: "Errors"
                        },
                            error: function (e) {
                            display_kendoui_grid_error(e);
                            this.cancelChanges();
                        },
                            pageSize: 10,
                            serverPaging: true,
                            serverFiltering: true,
                            serverSorting: false
                        },
                            resizable: true,
                            groupable: false,
                            sortable: true,
                        pageable: {
                            refresh: true,
                            pageSizes: true,
                            buttonCount: 5,
                        messages: {
                            display: '{0} - {1} de {2} itens',
                            allPages: 'Todos',
                            itemsPerPage: 'Itens por página'
                        }
                        },
                            columns: [{
                                field: "FeatureName",
                                title: "Funcionalidade",
                                width: 100,
                                headerAttributes: { style: "text-align:left" }
                            }, {
                                field: "",
                                title: "Adicionar",
                                width: 20,
                                headerAttributes: { style: "text-align:center" },
                                attributes: { style: "text-align:center" },
                                template: '<div title="Associar Funcionalidade" class="btn btn-success btn-sm text-center" onclick="AssociateFeature(#=FeatureID#)" > <i class="fa fa-plus"></i> </div> '

                            }]
                        });
                    });

                    </script>
                    <script type="text/javascript">
                    $(document).ready(function () {

                        $('#btn-aplicar-filtros').click(function () {
                            var grid = $('#featureNoAssociated-grid').data('kendoGrid');
                            if (grid.dataSource.page() == 1) {
                                grid.dataSource.page(1);
                            }
                            else {
                                grid.dataSource.read({ parameter: "value" });
                            }
                            return false;
                        });

                    $("#@Html.FieldIdFor(model => model.SearchFeatureName)").keydown(function (event) {
                        if (event.keyCode == 13) {
                            $("#btn-aplicar-filtros").click();
                            return false;
                        }
                    });

                });

                function additionalData() {
                var data = {
                    SearchFeatureName: $('#@Html.FieldIdFor(model => model.SearchFeatureName)').val()
                };

                addAntiForgeryToken(data);

                return data;

                    };

                    var AssociateFeature = function (featureID) {
                        var url = '/TestScenario/AssociateFeature?featureID=' + featureID;

                        $('#FeatureAssociateModalDiv').load(url, function () {

                        })

                        $("#btn-aplicar-filtros").click();

                        return false;
                    };

                    </script>
                </div>
            </div>
        </div>
    </div>
</div>
}

