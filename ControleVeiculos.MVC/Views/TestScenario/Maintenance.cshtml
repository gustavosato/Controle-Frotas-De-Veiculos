@model Lean.Test.Cloud.MVC.Models.TestScenarios.TestScenarioModel

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@Html.HiddenFor(model => model.TestScenarioID)
@Html.HiddenFor(model => model.CreatedByID)
@Html.HiddenFor(model => model.StartExecution)
@Html.HiddenFor(model => model.EndExecution)


<div class="form-group row">
    <div class="col-md-8 mb-auto">
        <strong>@Html.LabelFor(model => model.TestScenario, new { @class = "col-sm-0 col-form-label text-left" })</strong>
        <span style="color:black;">*</span>
        @Html.TextBoxFor(model => model.TestScenario, new { @class = "form-control", placeholder = "Digite o nome do cenário", @autofocus = "autofocus" })
        @Html.ValidationMessageFor(model => model.TestScenario, "", new { @class = "form-text text-danger" })
    </div>

    <div class="col-md-2 mb-auto">
        @Html.LabelFor(model => model.ExecutionOrder, new { @class = "col-sm-0 col-form-label text-left" })
        @Html.TextBoxFor(model => model.ExecutionOrder, new { @class = "form-control", placeholder = "Digite a ordem" })
        @Html.ValidationMessageFor(model => model.ExecutionOrder, "", new { @class = "form-text text-danger" })
    </div>

    <div class="col-md-2 mb-auto">
        @Html.LabelFor(model => model.StatusID, new { @class = "col-sm-0 col-form-label text-left" })
        @Html.DropDownList("StatusID", Model.LoadStatus, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.StatusID, "", new { @class = "form-text text-danger" })
    </div>

    <div class="col-md-4 mb-auto">
        <strong>@Html.LabelFor(model => model.TestTypeID, new { @class = "col-sm-0 col-form-label text-left" })</strong>
        <span style="color:black;">*</span>
        @Html.DropDownList("TestTypeID", Model.LoadTestType, "Selecione...", new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.TestTypeID, "", new { @class = "form-text text-danger" })
    </div>

    <div class="col-md-4 mb-auto">
        <strong>@Html.LabelFor(model => model.ExecutionTypeID, new { @class = "col-sm-0 col-form-label text-left" })</strong>
        <span style="color:black;">*</span>
        @Html.DropDownList("ExecutionTypeID", Model.LoadExecutionType, "Selecione...", new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.ExecutionTypeID, "", new { @class = "form-text text-danger" })
    </div>

    <div class="col-md-2 mb-auto">
        @Html.LabelFor(model => model.StartExecution, new { @class = "col-sm-0 col-form-label text-left" })
        @Html.TextBoxFor(model => model.StartExecution, new { @class = "form-control", id = "StartExecution", @readonly = "readonly" })
        @Html.ValidationMessageFor(model => model.StartExecution, "", new { @class = "form-text text-danger" })
    </div>

    <div class="col-md-2 mb-auto">
        @Html.LabelFor(model => model.EndExecution, new { @class = "col-sm-0 col-form-label text-left" })
        @Html.TextBoxFor(model => model.EndExecution, new { @class = "form-control", id = "EndExecution", @readonly = "readonly" })
        @Html.ValidationMessageFor(model => model.EndExecution, "", new { @class = "form-text text-danger" })
    </div>

    <div class="col-md-12 mb-auto">
        @Html.LabelFor(model => model.Description, new { @class = "col-sm-0 col-form-label text-left" })
        @Html.TextAreaFor(model => model.Description, new { @class = "form-control", placeholder = "Digite uma descrição", rows = "3" })
        <script>
            $(document).ready(function () {
                $("#Description").kendoEditor({
                    tools: [
                        "formatting",
                        "bold", "italic", "underline", "strikethrough",
                        "justifyLeft", "justifyCenter", "justifyRight", "justifyFull",
                        "insertUnorderedList", "insertOrderedList", "indent", "outdent",
                        "createLink", "unlink", "insertImage", "insertFile",
                        "subscript", "superscript",
                        "tableWizard", "createTable",
                        "addRowAbove", "addRowBelow",
                        "addColumnLeft", "addColumnRight",
                        "deleteRow", "deleteColumn",
                        "viewHtml", "cleanFormatting",
                        "fontName", "fontSize",
                        "foreColor", "backColor"
                    ],
                    messages: {
                        fontNameInherit: "Arial",
                        fontSizeInherit: "3 (12pt)"
                    },
                    resizable: true
                });
            });
        </script>
    </div>
</div>
           