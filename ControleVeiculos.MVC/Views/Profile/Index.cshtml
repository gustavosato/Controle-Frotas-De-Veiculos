@model Lean.Test.Cloud.MVC.Models.Profiles.ProfileModel
@{
    ViewBag.Title = "Permissões";
    Layout = "~/Views/Shared/_ContentPage.cshtml";
}


@using (Html.BeginForm())
{
    <div class="container-fluid">
        <br />
        <div class="content-header clearfix">

            <div class="pull-left">


                <button type="button" onclick="Add()" id="btnNew" class="btn btn-dark btn-sm" data-toggle="modal" data-target='#AddModal' title="Novo Registro">
                    <i class="fa fa-plus-circle"></i> Novo
                </button>
                <button class="btn btn-primary btn-sm" type="button" id="btnFiltrar" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample" title="Filtrar">
                    <i class="fa fa-filter"></i> Filtrar
                </button>
                <button type="button" id="btnExportExcel" class="btn btn-info btn-sm" title="Exportar para Excel">
                    <i class="fa fa-file-excel-o"></i> Exportar para Excel
                </button>
            </div>
        </div>
        <br />

        <div class="card">

            <div class="collapse" id="collapseExample">
                <div class="card card-body">
                    <div class="row">
                        <div class="col-md-12 mx-auto">
                            <div class="form-group row">
                                @Html.LabelFor(model => model.SearchGroupID, new { @class = "col-sm-2 col-form-label text-right" })
                                <div class="col-sm-3">
                                    @Html.DropDownList("SearchGroupID", Model.SearchLoadGroup, "Selecione...", new { @class = "form-control" })
                                </div>
                                @Html.LabelFor(model => model.SearchSystemFeatureID, new { @class = "col-sm-2 col-form-label text-right" })
                                <div class="col-sm-3">
                                    @Html.DropDownList("SearchSystemFeatureID", Model.SearchLoadSystemFeature, "Selecione...", new { @class = "form-control" })
                                </div>
                            </div>

                            <br />
                            <div class="col">
                                <div class="text-center">
                                    <button type="button" class="btn btn-success btn-sm" id="btn-aplicar-filtros" title="Aplicar filtros">
                                        <i class="fa fa-check-circle"></i> Filtrar
                                    </button>
                                    <button class="btn btn-secondary btn-sm" type="reset" id="btnFiltrar" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample" title="Fechar filtros">
                                        <i class="fa fa-close"></i> Fechar
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>



            <div class="card-body">
                <div><h5>PERFIS</h5></div>

                <div id="profile-grid"></div>
                <script>

                $(document).ready(function () {
                    $("#profile-grid").kendoGrid({

                dataSource: {
                    type: "json",
                    transport: {
                        read: {
                            url: "@Html.Raw(Url.Action("GetAll", "Profile"))",
                            type: "POST",
                            dataType: "json",
                            data: additionalData
                            }
                     },
                    schema: {
                        data: "Data",
                        total: "Total",
                        errors: "Errors"
                    },
                    error: function (e) {
                    display_kendoui_grid_error(e);
                    this.cancelChanges();
                },
                    pageSize: 10,
                    serverPaging: true,
                    serverFiltering: true,
                    serverSorting: false
                },
                    resizable: true,
                    groupable: true,
                    sortable: true,
                pageable: {
                    refresh: true,
                    pageSizes: true,
                    buttonCount: 5,
                messages: {
                    display: '{0} - {1} de {2} itens',
                    allPages: 'Todos',
                    itemsPerPage: 'Itens por página'
                }
                },
                    columns: [{
                        //field: "ProfileID",
                        //title: "Perfil",
                        //width: 30,
                        //headerAttributes: { style: "text-align:left" },
                        //attributes: { class: "text-left" },
                    //},{
                        field: "GroupID",
                        title: "Perfil",
                        width: 30,
                        headerAttributes: { style: "text-align:left" }
                    }, {
                        field: "SystemFeatureID",
                        title: "Funcionalidade",
                        width: 30,
                        headerAttributes: { style: "text-align:left" },
                    }, {
                        field: "AllowView",
                        title: "Ver",
                        width: 20,
                        headerAttributes: { style: "text-align:center" },
                        attributes: { class: "text-center" },
                        template: '# if(AllowView == true)  {# <i class="fa fa-check text-success true-icon"></i> #} else {# <i class="fa fa-close text-danger false-icon"></i> #}  #'

                    }, {
                        field: "AllowAdd",
                        title: "Adicionar",
                        width: 20,
                            headerAttributes: { style: "text-align:center" },
                        attributes: { class: "text-center" },
                        template: '# if(AllowAdd == true)  {# <i class="fa fa-check text-success true-icon"></i> #} else {# <i class="fa fa-close text-danger false-icon"></i> #}  #'

                    }, {
                        field: "AllowUpdate",
                        title: "Atualizar",
                        width: 20,
                            headerAttributes: { style: "text-align:center" },
                        attributes: { class: "text-center" },
                        template: '# if(AllowUpdate == true)  {# <i class="fa fa-check text-success true-icon"></i> #} else {# <i class="fa fa-close text-danger false-icon"></i> #}  #'
                    }, {
                        field: "AllowDelete",
                        title: "Excluir",
                        width: 20,
                            headerAttributes: { style: "text-align:center" },
                        attributes: { class: "text-center" },
                        template: '# if(AllowDelete == true)  {# <i class="fa fa-check text-success true-icon"></i> #} else {# <i class="fa fa-close text-danger false-icon"></i> #}  #'
                    }, {
                        field: "AllowChangeStatus",
                        title: "Alterar Status",
                        width: 20,
                            headerAttributes: { style: "text-align:center" },
                        attributes: { class: "text-center" },
                        template: '# if(AllowChangeStatus == true)  {# <i class="fa fa-check text-success true-icon"></i> #} else {# <i class="fa fa-close text-danger false-icon"></i> #}  #'
                    }, {
                        field: "AllowAddRemove",
                        title: "Mover",
                        width: 20,
                            headerAttributes: { style: "text-align:center"},
                        attributes: { class: "text-center" },
                        template: '# if(AllowAddRemove == true)  {# <i class="fa fa-check text-success true-icon"></i> #} else {# <i class="fa fa-close text-danger false-icon"></i> #}  #'
                    }, {
                        field: "AllowExportExcel",
                        title: "Exportar",
                        width: 20,
                            headerAttributes: { style: "text-align:center" },
                        attributes: { class: "text-center" },
                        template: '# if(AllowExportExcel == true)  {# <i class="fa fa-check text-success true-icon"></i> #} else {# <i class="fa fa-close text-danger false-icon"></i> #}  #'
                    }, {
                        field: "AllowReportView",
                        title: "Visualizar Relatório",
                        width: 20,
                            headerAttributes: { style: "text-align:center" },
                        attributes: { class: "text-center" },
                        template: '# if(AllowReportView == true)  {# <i class="fa fa-check text-success true-icon"></i> #} else {# <i class="fa fa-close text-danger false-icon"></i> #}  #'
                    }, {
                        field: "",
                        title: "Comandos",
                        width: 15,
                            headerAttributes: { style: "text-align:center" },
                        attributes: { style: "text-align:center" },
                        template: '<div title="Editar Perfil" class="btn btn-primary btn-sm text-center" onclick="Edit(#=ProfileID#)" data-toggle="modal" data-target="\\#MaintenanceModal"> <i class="fa fa-edit"></i> </div> ' +
                                    '<div title="Excluir Perfil" class="btn btn-danger btn-sm text-center" onclick="Delete(#=ProfileID#)" data-toggle="modal" data-target="\\#DeleteModal"> <i class="fa fa-trash"></i> </div> '
                    }],
                        excelExport: function (e) {
                            e.workbook.fileName = "LeanTest Cloud - Perfil.xlsx";
                        }
                    });
            });
                </script>
                <script type="text/javascript">
                    $(document).ready(function () {
                        $('#btnExportExcel').click(function () {
                            var grid = $('#profile-grid').data('kendoGrid');
                            grid.saveAsExcel();
                            return false;
                        });

                        $('#btn-aplicar-filtros').click(function () {
                            var grid = $('#profile-grid').data('kendoGrid');
                            if (grid.dataSource.page() == 1) {
                                grid.dataSource.page(1);
                            }
                            else {
                                grid.dataSource.read({ parameter: "value" });
                            }
                            return false;
                        });


                        $("#@Html.FieldIdFor(model => model.SearchGroupID)").keydown(function (event) {
                            if (event.keyCode == 13) {
                                $("#btn-aplicar-filtros").click();
                                return false;
                            }
                        });


                        $("#@Html.FieldIdFor(model => model.SearchSystemFeatureID)").keydown(function (event) {
                            if (event.keyCode == 13) {
                                $("#btn-aplicar-filtros").click();
                                return false;
                            }
                        });
                    });

                function additionalData() {
                    var data = {
                        SearchGroupID: $('#@Html.FieldIdFor(model => model.SearchGroupID)').val(),
                        SearchSystemFeatureID: $('#@Html.FieldIdFor(model => model.SearchSystemFeatureID)').val()

                    };

                    addAntiForgeryToken(data);

                    return data;

                    };

                    var Delete = function (ProfileID) {
                        var url = '/profile/GetByID?profileID=' + ProfileID + '&ActionName=Delete';

                        $('#DeleteModalDiv').load(url, function () {

                        })
                    };

                    var Edit = function (ProfileID) {
                        var url = '/profile/GetByID?profileID=' + ProfileID + '&ActionName=Maintenance';

                        $('#MaintenanceModalDiv').load(url, function () {

                        })

                        $('#MaintenanceModal').on('shown.bs.modal', function () {

                            $('#calender-container .input-group.date').datepicker({
                                multidate: false,
                                multidateSeparator: ";",
                                autoclose: true,
                                daysOfWeekHighlighted: "0,6",
                                todayBtn: true,
                                todayHighlight: true,
                                format: 'dd/mm/yyyy',
                                language: 'pt-BR'
                            });

                        });
                    };

                    var Add = function () {
                        var url = '/Profile/New';

                        $('#AddModalDiv').load(url, function () {

                        })

                        $('#AddModal').on('shown.bs.modal', function () {

                            $('#calender-container .input-group.date').datepicker({
                                multidate: false,
                                multidateSeparator: ";",
                                autoclose: true,
                                daysOfWeekHighlighted: "0,6",
                                todayBtn: true,
                                todayHighlight: true,
                                format: 'dd/mm/yyyy',
                                language: 'pt-BR'
                            });

                        });
                    };

                </script>
            </div>
        </div>
    </div>
}

@using (Html.BeginForm("Add", "profile", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="modal fade" id="AddModal" role="dialog">
        <div class="modal-dialog modal-xl">
            <div class="modal-content">
                <div class="modal-header">
                    <h3 class="modal-title">Novo Perfil</h3>
                    <a href="#" class="close" data-dismiss="modal">&times;</a>
                </div>
                <div class="modal-body" id="AddModalDiv">
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-success btn-sm">
                        <i class="fa fa-save"></i>  Salvar
                    </button>
                    <button type="button" class="btn btn-secondary btn-sm" data-dismiss="modal">
                        <i class="fa fa-close"></i>  Cancelar
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@using (Html.BeginForm("Update", "profile", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="modal fade" id="MaintenanceModal" role="dialog">
        <div class="modal-dialog modal-xl">
            <div class="modal-content">
                <div class="modal-header">
                    <h3 class="modal-title">Detalhes</h3>
                    <a href="#" class="close" data-dismiss="modal">&times;</a>
                </div>
                <div class="modal-body" id="MaintenanceModalDiv">
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-success btn-sm">
                        <i class="fa fa-save"></i>  Salvar
                    </button>
                    <button type="button" class="btn btn-secondary btn-sm" data-dismiss="modal">
                        <i class="fa fa-close"></i>  Cancelar
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@using (Html.BeginForm("Delete", "profile", FormMethod.Post, new { novalidate = "novalidate" }))
{
    <div class="modal fade" id="DeleteModal" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h3 class="modal-title">Excluir</h3>
                    <a href="#" class="close" data-dismiss="modal">&times;</a>
                </div>
                <div class="modal-body" id="DeleteModalDiv">

                </div>

                <div class="modal-footer">
                    <button type="submit" class="btn btn-success btn-sm">
                        <i class="fa fa-check-circle"></i> Sim
                    </button>
                    <button type="button" class="btn btn-secondary btn-sm" data-dismiss="modal">
                        <i class="fa fa-close"></i> Não
                    </button>
                </div>
            </div>
        </div>
    </div>
}