@model ControleVeiculos.MVC.Models.Resumes.ResumeModel

@Html.HiddenFor(model => model.VacancieID)

@using (Html.BeginForm())
{
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12 mx-auto">
                <div class="form-group row">
                    <div class="col-sm-12">
                        Pesquisa pelo @Html.LabelFor(model => model.SearchSummary, new { @class = "col-sm-0 col-form-label text-right" })

                        @Html.TextBoxFor(model => model.SearchSummary, null, new { @class = "form-control" })
                    </div>

                </div>
            </div>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-6 mb-auto">
            <div class="container-fluid">
                <div class="card">
                    <div class="card-body">
                        <div id="resumeAssociated-grid"></div>
                        <script>
                            $(document).ready(function () {
                            $("#resumeAssociated-grid").kendoGrid({

                            dataSource: {
                                type: "json",
                            transport: {
                            read: {
                                url: "@Html.Raw(Url.Action("GetAllAssociateVacancieByResumeID", "Vacancie"))",
                                type: "POST",
                                dataType: "json",
                                data: additionalData
                                }
                            },
                            schema: {
                                data: "Data",
                                total: "Total",
                                errors: "Errors"
                            },
                                error: function (e) {
                                display_kendoui_grid_error(e);
                                this.cancelChanges();
                            },
                                pageSize: 10,
                                serverPaging: true,
                                serverFiltering: true,
                                serverSorting: false
                            },
                                resizable: true,
                                vacancieable: false,
                                sortable: true,
                            pageable: {
                                refresh: true,
                                pageSizes: true,
                                buttonCount: 5,
                            messages: {
                                display: '{0} - {1} de {2} itens',
                                allPages: 'Todos',
                                itemsPerPage: 'Itens por página'
                            }
                            },
                                columns: [{
                                    field: "Summary",
                                    title: "Candidato",
                                    width: 100,
                                    headerAttributes: { style: "text-align:left" }
                                },{
                                    field: "",
                                    title: "Excluir",
                                    width: 30,
                                    headerAttributes: { style: "text-align:center" },
                                    attributes: { style: "text-align:center" },
                                    template: '<div title="Desassociar Currículo" class="btn btn-danger btn-sm text-center" onclick="DisassociateResume(#=ResumeID#)" > <i class="fa fa-close"></i> </div> '

                                }]
                            });
                        });

                        </script>
                        <script type="text/javascript">
                            $(document).ready(function () {

                                $('#btn-aplicar-filtros').click(function () {
                                    var grid = $('#resumeAssociated-grid').data('kendoGrid');
                                    if (grid.dataSource.page() == 1) {
                                        grid.dataSource.page(1);
                                    }
                                    else {
                                        grid.dataSource.read({ parameter: "value" });
                                    }
                                    return false;
                                });

                                $("#@Html.FieldIdFor(model => model.SearchSummary)").keydown(function (event) {
                                    if (event.keyCode == 13) {
                                        $("#btn-aplicar-filtros").click();
                                        return false;
                                    }
                                });

                            });

                            function additionalData() {
                                var data = {
                                    SearchSummary: $('#@Html.FieldIdFor(model => model.SearchSummary)').val()
                                };

                                addAntiForgeryToken(data);

                                return data;

                                };

                                var DisassociateResume = function (resumeID) {

                                    var url = '/Vacancie/DisassociateResume?resumeID=' + resumeID;
                                    
                                    $('#DeleteModalDiv').load(url, function () {

                                    })

                                    $("#btn-aplicar-filtros").click();

                                    return false;
                                };

                        </script>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6 mb-auto">

            <div class="container-fluid">
                <div class="card">

                    <div class="card-body">
                        <div id="resumeNoAssociated-grid"></div>
                        <script>

                            $(document).ready(function () {
                            $("#resumeNoAssociated-grid").kendoGrid({

                            dataSource: {
                                type: "json",
                            transport: {
                            read: {
                                url: "@Html.Raw(Url.Action("GetAllNoAssociateVacancieByResumeID", "Vacancie"))",
                                type: "POST",
                                dataType: "json",
                                data: additionalData
                                }
                            },
                            schema: {
                                data: "Data",
                                total: "Total",
                                errors: "Errors"
                            },
                                error: function (e) {
                                display_kendoui_grid_error(e);
                                this.cancelChanges();
                            },
                                pageSize: 10,
                                serverPaging: true,
                                serverFiltering: true,
                                serverSorting: false
                            },
                                resizable: true,
                                vacancieable: false,
                                sortable: true,
                            pageable: {
                                refresh: true,
                                pageSizes: true,
                                buttonCount: 5,
                            messages: {
                                display: '{0} - {1} de {2} itens',
                                allPages: 'Todos',
                                itemsPerPage: 'Itens por página'
                            }
                            },
                                columns: [{
                                    field: "Summary",
                                    title: "Candidato",
                                    width: 100,
                                    headerAttributes: { style: "text-align:left" }
                                }, {
                                    field: "",
                                    title: "Adicionar",
                                    width: 30,
                                    headerAttributes: { style: "text-align:center" },
                                    attributes: { style: "text-align:center" },
                                    template: '<div title="Associar Currículo" class="btn btn-success btn-sm text-center" onclick="AssociateResume(#=ResumeID#)" > <i class="fa fa-plus"></i> </div> '

                                }]
                            });
                        });

                        </script>
                        <script type="text/javascript">
                     $(document).ready(function () {

                         $('#btn-aplicar-filtros').click(function () {
                             var grid = $('#resumeNoAssociated-grid').data('kendoGrid');
                             if (grid.dataSource.page() == 1) {
                                 grid.dataSource.page(1);
                             }
                             else {
                                 grid.dataSource.read({ parameter: "value" });
                             }
                             return false;
                         });

                        $("#@Html.FieldIdFor(model => model.SearchSummary)").keydown(function (event) {
                            if (event.keyCode == 13) {
                                $("#btn-aplicar-filtros").click();
                                return false;
                            }
                        });

                    });

                    function additionalData() {
                    var data = {
                        SearchSummary: $('#@Html.FieldIdFor(model => model.SearchSummary)').val()
                    };

                    addAntiForgeryToken(data);

                    return data;

                     };

                     var AssociateResume = function (resumeID) {

                         var url = '/Vacancie/AssociateResume?resumeID=' + resumeID;

                         $('#ResumeAssociateModalDiv').load(url, function () {

                         })

                         $("#btn-aplicar-filtros").click();

                         return false;
                     };

                        </script>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

