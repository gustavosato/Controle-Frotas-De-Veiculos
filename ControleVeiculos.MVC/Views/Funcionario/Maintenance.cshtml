@model ControleVeiculos.MVC.Models.Funcionarios.FuncionarioModel

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@Html.HiddenFor(model => model.FuncionarioID)

<ul class="nav nav-tabs" id="myTab" role="tablist">
    <li class="nav-item">
        <a class="nav-link active" id="maintenance-tab" data-toggle="tab" href="#maintenance" role="tab" aria-controls="maintenance" aria-selected="true">Novo Funcionário</a>
    </li>
</ul>

<div class="tab-content" id="myTabContent">
    <div class="tab-pane fade show active" id="maintenance" role="tabpanel" aria-labelledby="maintenance-tab">
        <div class="card">
            <div class="card-body">
                <div class="form-group row">
                    <div class="col-md-2 mb-auto">
                        @Html.LabelFor(model => model.NomeFuncionario, new { @class = "col-sm-0 col-form-label text-left" })
                        @Html.TextBoxFor(model => model.NomeFuncionario, new { @class = "form-control", placeholder = "Digite a ordem", @autofocus = "autofocus" })
                        @Html.ValidationMessageFor(model => model.NomeFuncionario, "", new { @class = "form-text text-danger" })
                    </div>
                    <div class="col-md-2 mb-auto">
                        @Html.LabelFor(model => model.Endereco, new { @class = "col-sm-0 col-form-label text-left" })
                        @Html.TextBoxFor(model => model.Endereco, new { @class = "form-control", placeholder = "Digite a ordem", @autofocus = "autofocus" })
                        @Html.ValidationMessageFor(model => model.Endereco, "", new { @class = "form-text text-danger" })
                    </div>

                    <div class="col-md-2 mb-auto">
                        @Html.LabelFor(model => model.CPF, new { @class = "col-sm-0 col-form-label text-left" })
                        @Html.TextBoxFor(model => model.CPF, new { @class = "form-control", placeholder = "Digite a ordem", @autofocus = "autofocus" })
                        @Html.ValidationMessageFor(model => model.CPF, "", new { @class = "form-text text-danger" })
                    </div>
                    <div class="col-md-2 mb-auto">
                        @Html.LabelFor(model => model.Funcao, new { @class = "col-sm-0 col-form-label text-left" })
                        @Html.DropDownList("Funcao", Model.LoadFuncao, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Funcao, "", new { @class = "form-text text-danger" })
                    </div>

                    <div class="col-md-2 mb-auto">
                        @Html.LabelFor(model => model.Setor, new { @class = "col-sm-0 col-form-label text-left" })
                        @Html.DropDownList("Setor", Model.LoadSetor, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Setor, "", new { @class = "form-text text-danger" })
                    </div>

                    <div class="col-md-2 mb-auto">
                        @Html.LabelFor(model => model.Telefone, new { @class = "col-sm-0 col-form-label text-left" })
                        @Html.TextBoxFor(model => model.Telefone, new { @class = "form-control", placeholder = "Digite a ordem", @autofocus = "autofocus" })
                        @Html.ValidationMessageFor(model => model.Telefone, "", new { @class = "form-text text-danger" })
                    </div>
                    <div class="col-md-2 mb-auto">
                        @Html.LabelFor(model => model.NumeroCnh, new { @class = "col-sm-0 col-form-label text-left" })
                        @Html.TextBoxFor(model => model.NumeroCnh, new { @class = "form-control", placeholder = "Digite a ordem", @autofocus = "autofocus" })
                        @Html.ValidationMessageFor(model => model.NumeroCnh, "", new { @class = "form-text text-danger" })
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




