@model Lean.Test.Cloud.MVC.Models.Licenses.LicenseModel
@{
    ViewBag.Title = " - Licença";
    Layout = "~/Views/Shared/_ContentPage.cshtml";
}

@using (Html.BeginForm())
{
    <div class="container-fluid">
        <br />
        <div class="content-header clearfix">

            <div class="pull-left">


                <button type="button" onclick="Add()" id="btnNew" class="btn btn-dark btn-sm" data-toggle="modal" data-target='#AddModal' title="Novo Registro">
                    <i class="fa fa-plus-circle"></i> Novo
                </button>
                <button class="btn btn-primary btn-sm" type="button" id="btnFiltrar" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample" title="Filtrar">
                    <i class="fa fa-filter"></i> Filtrar
                </button>
                <button type="button" id="btnExportExcel" class="btn btn-info btn-sm" title="Exportar para Excel">
                    <i class="fa fa-file-excel-o"></i> Exportar para Excel
                </button>
            </div>
        </div>
        <br />

        <div class="card">

            <div class="collapse" id="collapseExample">
                <div class="card card-body">
                    <div class="row">
                        <div class="col-md-12 mx-auto">
                            <div class="form-group row">
                                @Html.LabelFor(model => model.LicenseCode, new { @class = "col-sm-2 col-form-label text-right" })
                                <div class="col-sm-3">
                                    @Html.TextBoxFor(model => model.LicenseCode, new { @class = "form-control", autocomplete = "off" })
                                </div>
                                @Html.LabelFor(model => model.CustomerID, new { @class = "col-sm-2 col-form-label text-right" })
                                <div class="col-sm-3">
                                    @Html.DropDownList("CustomerID", Model.LoadSCustomers, "Selecione...", new { @class = "form-control" })
                                </div>
                            </div>

                            <div class="form-group row">
                                @Html.LabelFor(model => model.HostName, new { @class = "col-sm-2 col-form-label text-right" })
                                <div class="col-sm-3">
                                    @Html.TextBoxFor(model => model.HostName, new { @class = "form-control", autocomplete = "off" })
                                </div>
                                @Html.LabelFor(model => model.CreatedByID, new { @class = "col-sm-2 col-form-label text-right" })
                                <div class="col-sm-3">
                                    @Html.DropDownList("CreatedByID", Model.LoadCreatedBys, "Selecione...", new { @class = "form-control" })
                                </div>
                            </div>

                            <br />
                            <div class="col">
                                <div class="text-center">
                                    <button type="button" class="btn btn-success btn-sm" id="btn-aplicar-filtros" title="Aplicar filtros">
                                        <i class="fa fa-check-circle"></i> Filtrar
                                    </button>
                                    <button class="btn btn-secondary btn-sm" type="reset" id="btnFiltrar" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample" title="Fechar filtros">
                                        <i class="fa fa-close"></i> Fechar
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card-body">
                <div><h5>LICENÇAS</h5></div>

                <div id="licenses-grid"></div>
                <script>

                $(document).ready(function () {
                $("#licenses-grid").kendoGrid({

                    dataSource: {
                    type: "json",
                    transport: {
                    read: {
                    url: "@Html.Raw(Url.Action("GetAll", "License"))",
                    type: "POST",
                    dataType: "json",
                    data: additionalData
                    }
                },
                schema: {
                    data: "Data",
                    total: "Total",
                    errors: "Errors"
                },
                    error: function (e) {
                    display_kendoui_grid_error(e);
                    this.cancelChanges();
                },
                    pageSize: 10,
                    serverPaging: true,
                    serverFiltering: true,
                    serverSorting: false
                },
                    resizable: true,
                    groupable: true,
                    sortable: true,
                    pageable: {
                    refresh: true,
                    pageSizes: true,
                    buttonCount: 5,
                    messages: {
                    display: '{0} - {1} de {2} itens',
                    allPages: 'Todos',
                    itemsPerPage: 'Itens por página'
                }
                    },
                    columns: [{
                        //hidden: true,
                        field: "License",
                        title: "Status",
                        width: 30,
                        headerAttributes: { style: "text-align:center" },
                        attributes: { class: "text-center" },
                        template: '# if(License == false) {# <i class="fa fa-close text-danger false-icon"></i> #} else {# <i class="fa fa-check text-success true-icon"></i> #}  #'
                    }, {

                        field: "CustomerID",
                        title: "Empresa",
                        width: 70,
                        headerAttributes: { style: "text-align:left" }
                    }, {

                        field: "LicenseCode",
                        title: "Code",
                        width: 200,
                        headerAttributes: { style: "text-align:left" }
                    }, {
                        field: "HostName",
                        title: "Nome da Máquina",
                        width: 100,
                        headerAttributes: { style: "text-align:left" }
                    }, {
                        field: "CreatedByID",
                        title: "Solicitante",
                        width: 70,
                        headerAttributes: { style: "text-align:left" }
                    }, {
                        field: "CreationDate",
                        title: "Data da Solicitação",
                        width: 70,
                        headerAttributes: { style: "text-align:left" }
                    }, {
                        field: "",
                        title: "Comandos",
                        width: 75,
                        headerAttributes: { style: "text-align:center" },
                        attributes: { style: "text-align:center" },
                        template: '<div title="Editar Registro" class="btn btn-primary btn-sm text-center" onclick="Edit(#=LicenseID#)" data-toggle="modal" data-target="\\#MaintenanceModal"> <i class="fa fa-edit"></i> </div> ' +
                        '<div title="Excluir Registro" class="btn btn-danger btn-sm text-center" onclick="Delete(#=LicenseID#)" data-toggle="modal" data-target="\\#DeleteModal"> <i class="fa fa-trash"></i> </div> ' +
                                    '# if(License == null)  {# <div title="Aprovar" class="btn btn-warning btn-sm text-center" onclick="StatusChange(#=LicenseID#)" > <i class="fa fa-bell" text-danger false-icon"></i></div> #} else ' +
                                        '{# <div title="Rejeitar" class="btn btn-success btn-sm" text-center" onclick="StatusChange(#=LicenseID#)"> <i class="fa fa-bell-slash" text-danger false-icon"></i></div> #}  # '


                    }],
                    excelExport: function (e) {
                        e.workbook.fileName = "LeanTest Cloud - Licenses.xlsx";
                    }
                });
            });

                </script>
                <script type="text/javascript">
                    $(document).ready(function () {
                        $('#btnExportExcel').click(function () {
                            var grid = $('#licenses-grid').data('kendoGrid');
                            grid.saveAsExcel();
                            return false;
                        });

                        $('#btn-aplicar-filtros').click(function () {
                            var grid = $('#licenses-grid').data('kendoGrid');
                            if (grid.dataSource.page() == 1) {
                                grid.dataSource.page(1);
                            }
                            else {
                                grid.dataSource.read({ parameter: "value" });
                            }
                            return false;
                        });

                        $("#@Html.FieldIdFor(model => model.LicenseCode)").keydown(function (event) {
                            if (event.keyCode == 13) {
                                $("#btn-aplicar-filtros").click();
                                return false;
                            }
                        });

                        $("#@Html.FieldIdFor(model => model.CustomerID)").keydown(function (event) {
                            if (event.keyCode == 13) {
                                $("#btn-aplicar-filtros").click();
                                return false;
                            }
                        });

                        $("#@Html.FieldIdFor(model => model.HostName)").keydown(function (event) {
                            if (event.keyCode == 13) {
                                $("#btn-aplicar-filtros").click();
                                return false;
                            }
                        });

                        $("#@Html.FieldIdFor(model => model.CreatedByID)").keydown(function (event) {
                            if (event.keyCode == 13) {
                                $("#btn-aplicar-filtros").click();
                                return false;
                            }
                        });

                    });

                function additionalData() {
                    var data = {
                        LicenseCode: $('#@Html.FieldIdFor(model => model.LicenseCode)').val(),
                        CustomerID: $('#@Html.FieldIdFor(model => model.CustomerID)').val(),
                        HostName: $('#@Html.FieldIdFor(model => model.HostName)').val(),
                        CreatedByID: $('#@Html.FieldIdFor(model => model.CreatedByID)').val()

                    };

                    addAntiForgeryToken(data);

                    return data;

                    };

                    var Delete = function (licenseID) {
                        var url = '/License/GetByID?licenseID=' + licenseID + '&ActionName=Delete';

                        $('#DeleteModalDiv').load(url, function () {

                        })
                    };

                    var Edit = function (licenseID) {
                        var url = '/License/GetByID?licenseID=' + licenseID + '&ActionName=Maintenance';

                        $('#MaintenanceModalDiv').load(url, function () {

                        })

                        $('#MaintenanceModal').on('shown.bs.modal', function () {

                            $('#calender-container .input-group.date').datepicker({
                                multidate: false,
                                multidateSeparator: ";",
                                autoclose: true,
                                daysOfWeekHighlighted: "0,6",
                                todayBtn: true,
                                todayHighlight: true,
                                format: 'dd/mm/yyyy',
                                language: 'pt-BR'
                            });

                        });
                    };

                    var Add = function () {
                        var url = '/License/New';

                        $('#AddModalDiv').load(url, function () {

                        })

                        $('#AddModal').on('shown.bs.modal', function () {

                            $('#calender-container .input-group.date').datepicker({
                                multidate: false,
                                multidateSeparator: ";",
                                autoclose: true,
                                daysOfWeekHighlighted: "0,6",
                                todayBtn: true,
                                todayHighlight: true,
                                format: 'dd/MM/yyyy',
                                language: 'pt-BR'
                            });

                        });
                    };

                     var StatusChange = function (licenseID) {

                        var url = '/License/StatusChange?licenseID=' + licenseID;

                        $('#DeleteModalDiv').load(url, function () {

                        })

                        $("#btn-aplicar-filtros").click();

                        return false;
                    };

                </script>
            </div>
        </div>
    </div>

}

@using (Html.BeginForm("Add", "License", FormMethod.Post))
{
    <div class="modal fade" id="AddModal" role="dialog">
        <div class="modal-dialog modal-xl">
            <div class="modal-content">
                <div class="modal-header">
                    <h3 class="modal-title">Nova Licença</h3>
                    <a href="#" class="close" data-dismiss="modal">&times;</a>
                </div>
                <div class="modal-body" id="AddModalDiv">
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-success btn-sm">
                        <i class="fa fa-save"></i>  Salvar
                    </button>
                    <button type="button" class="btn btn-secondary btn-sm" data-dismiss="modal">
                        <i class="fa fa-close"></i>  Cancelar
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@using (Html.BeginForm("Update", "License", FormMethod.Post))
{
    <div class="modal fade" id="MaintenanceModal" role="dialog">
        <div class="modal-dialog modal-xl">
            <div class="modal-content">
                <div class="modal-header">
                    <h3 class="modal-title">Detalhes</h3>
                    <a href="#" class="close" data-dismiss="modal">&times;</a>
                </div>
                <div class="modal-body" id="MaintenanceModalDiv">
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-success btn-sm">
                        <i class="fa fa-save"></i>  Salvar
                    </button>
                    <button type="button" class="btn btn-secondary btn-sm" data-dismiss="modal">
                        <i class="fa fa-close"></i>  Cancelar
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@using (Html.BeginForm("Delete", "License", FormMethod.Post, new { novalidate = "novalidate" }))
{
    <div class="modal fade" id="DeleteModal" role="dialog">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h3 class="modal-title">Excluir</h3>
                    <a href="#" class="close" data-dismiss="modal">&times;</a>
                </div>
                <div class="modal-body" id="DeleteModalDiv">

                </div>

                <div class="modal-footer">
                    <button type="submit" class="btn btn-success btn-sm">
                        <i class="fa fa-check-circle"></i> Sim
                    </button>
                    <button type="button" class="btn btn-secondary btn-sm" data-dismiss="modal">
                        <i class="fa fa-close"></i> Não
                    </button>
                </div>
            </div>
        </div>
    </div>
}
