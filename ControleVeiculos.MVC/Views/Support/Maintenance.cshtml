                            @Html.TextBoxFor(model => model.ResolutionDate, new { @class = "form-control", autocomplete = "off" })<span class="input-group-addon"></span>
                            @Html.ValidationMessageFor(model => model.ResolutionDate, "", new { @class = "form-text text-danger" })
                        </div>
                    </div>
