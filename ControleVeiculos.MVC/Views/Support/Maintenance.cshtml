                                    var grid = $('#historical-grid').data('kendoGrid');
                                    if (grid.dataSource.page() == 1) {
                                        grid.dataSource.page(1);
                                    }
                                    else {
                                        grid.dataSource.read({ parameter: "value" });
                                    }
                                    return false;
                                });


                            });

                        function additionalData() {
                            var data = {
                                RecordID: $('#@Html.FieldIdFor(model => model.SupportID)').val(),
                                SystemFeatureID: "112"
                            };

                            addAntiForgeryToken(data);

                            return data;

                            };

                        </script>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $("#ApplicationSystemID").change(function () {
            $("#FeatureID").empty();
            $.ajax({
                type: 'POST',
                url: '@Url.Action("GetFeatures")',

                dataType: 'json',
                data: { ApplicationSystemID: $("#ApplicationSystemID").val() },
                success: function (itens) {
                    $("#FeatureID").append('<option value="">Selecione...</option>');
                    $.each(itens, function (i, item) {
                        $("#FeatureID").append('<option value="' + item.Value + '">' + item.Text + '</option>');
                    });
                },
                error: function (ex) {
                    alert('Failed to retrieve states.' + ex);
                }
            });
            return false;
        })
    });
</script>
