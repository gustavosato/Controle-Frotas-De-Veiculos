@model Lean.Test.Cloud.MVC.Models.Profiles.ProfileModel

<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.3.0/js/bootstrap-datepicker.js"></script>
<link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.8.0/css/bootstrap-datepicker.css" rel="stylesheet">

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>



@Html.HiddenFor(model => model.ProfileID)
@Html.HiddenFor(model => model.CreatedByID)
@Html.HiddenFor(model => model.CreationDate)

<div class="form-group row">
    <div class="col-md-6 mb-auto">
        <strong>@Html.LabelFor(model => model.GroupID, new { @class = "col-sm-0 col-form-label text-left" })</strong>
        <strong><span style="color:black;">*</span></strong>
        @Html.DropDownList("GroupID", Model.LoadGroup, "Selecione...", new { @class = "form-control", @autofocus = "autofocus" })
        @Html.ValidationMessageFor(model => model.GroupID, "", new { @class = "form-text text-danger" })
    </div>
    <div class="col-md-6 mb-auto">
        <strong>@Html.LabelFor(model => model.SystemFeatureID, new { @class = "col-sm-0 col-form-label text-left" })</strong>
        <strong><span style="color:black;">*</span></strong>
        @Html.DropDownList("SystemFeatureID", Model.LoadSystemFeature, "Selecione...", new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.SystemFeatureID, "", new { @class = "form-text text-danger" })
    </div>
   
    <div class="col-md-3 mb-auto">
        @Html.CheckBoxFor(model => model.AllowView, new { @class = "checkbox" })
        @Html.LabelFor(model => model.AllowView, new { @class = "col-sm-0 col-form-label text-left" })
        
    </div>
    <div class="col-md-3 mb-auto">
        @Html.CheckBoxFor(model => model.AllowAdd, new { @class = "checkbox" })
        @Html.LabelFor(model => model.AllowAdd, new { @class = "col-sm-0 col-form-label text-left" })
        
    </div>
    <div class="col-md-3 mb-auto">
        @Html.CheckBoxFor(model => model.AllowUpdate, new { @class = "checkbox" })
        @Html.LabelFor(model => model.AllowUpdate, new { @class = "col-sm-0 col-form-label text-left" })
        
    </div>
    <div class="col-md-3 mb-auto">
        @Html.CheckBoxFor(model => model.AllowDelete, new { @class = "checkbox" })
        @Html.LabelFor(model => model.AllowDelete, new { @class = "col-sm-0 col-form-label text-left" })
        
    </div>
</div>
<div class="form-group row">
    <div class="col-md-3 mb-auto">
        @Html.CheckBoxFor(model => model.AllowChangeStatus, new { @class = "checkbox" })
        @Html.LabelFor(model => model.AllowChangeStatus, new { @class = "col-sm-0 col-form-label text-left" })
        
    </div>
    <div class="col-md-3 mb-auto">
        @Html.CheckBoxFor(model => model.AllowAddRemove, new { @class = "checkbox" })
        @Html.LabelFor(model => model.AllowAddRemove, new { @class = "col-sm-0 col-form-label text-left" })
        
    </div>
    <div class="col-md-3 mb-auto">
        @Html.CheckBoxFor(model => model.AllowExportExcel, new { @class = "checkbox" })
        @Html.LabelFor(model => model.AllowExportExcel, new { @class = "col-sm-0 col-form-label text-left" })
        
    </div>
    <div class="col-md-3 mb-auto">
        @Html.CheckBoxFor(model => model.AllowReportView, new { @class = "checkbox" })
        @Html.LabelFor(model => model.AllowReportView, new { @class = "col-sm-0 col-form-label text-left" })
        
    </div>
</div>
