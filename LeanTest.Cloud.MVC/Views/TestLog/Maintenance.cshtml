@model Lean.Test.Cloud.MVC.Models.TestLogs.TestLogModel

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@Html.HiddenFor(model => model.LogID)
@Html.HiddenFor(model => model.CreatedByID)

<ul class="nav nav-tabs" id="myTab" role="tablist">
    <li class="nav-item">
        <a class="nav-link active" id="maintenance-tab" data-toggle="tab" href="#maintenance" role="tab" aria-controls="maintenance" aria-selected="true">Novo Log</a>
    </li>
</ul>

<div class="tab-content" id="myTabContent">
    <div class="tab-pane fade show active" id="maintenance" role="tabpanel" aria-labelledby="maintenance-tab">
        <div class="card">
            <div class="card-body">
                <div class="form-group row">
                    <div class="col-md-2 mb-auto">
                        <strong>@Html.LabelFor(model => model.StatusID, new { @class = "col-sm-0 col-form-label text-left" })</strong>
                        <span style="color:black;">*</span>
                        @Html.DropDownList("StatusID", Model.LoadStatus, "Selecione...", new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.StatusID, "", new { @class = "form-text text-danger" })

                    </div>

                    <div class="col-md-4 mb-auto">
                        <strong>@Html.LabelFor(model => model.StepName, new { @class = "col-sm-0 col-form-label text-left" })</strong>
                        <span style="color:black;">*</span>
                        @Html.TextBoxFor(model => model.StepName, new { @class = "form-control", placeholder = "Digite o nome do passo" })
                        @Html.ValidationMessageFor(model => model.StepName, "", new { @class = "form-text text-danger" })

                    </div>

                    <div class="col-md-6 mb-auto">
                        <strong>@Html.LabelFor(model => model.ExpectedResult, new { @class = "col-sm-0 col-form-label text-left" })</strong>
                        <span style="color:black;">*</span>
                        @Html.TextBoxFor(model => model.ExpectedResult, new { @class = "form-control", placeholder = "Digite o resultado esperado" })
                        @Html.ValidationMessageFor(model => model.ExpectedResult, "", new { @class = "form-text text-danger" })

                    </div>

                    <div class="col-md-6 mb-auto">
                        <strong>@Html.LabelFor(model => model.ActualResult, new { @class = "col-sm-0 col-form-label text-left" })</strong>
                        <span style="color:black;">*</span>
                        @Html.TextBoxFor(model => model.ActualResult, new { @class = "form-control", placeholder = "Digite o resultado atual" })
                        @Html.ValidationMessageFor(model => model.ActualResult, "", new { @class = "form-text text-danger" })

                    </div>

                    <div class="col-md-6 mb-auto">
                        <strong>@Html.LabelFor(model => model.PathEvidence, new { @class = "col-sm-0 col-form-label text-left" })</strong>
                        <span style="color:black;">*</span>
                        @Html.TextBoxFor(model => model.PathEvidence, new { @class = "form-control", placeholder = "Digite o caminho da evidência" })
                        @Html.ValidationMessageFor(model => model.PathEvidence, "", new { @class = "form-text text-danger" })

                    </div>

                </div>
            </div>
        </div>
    </div>
</div>






